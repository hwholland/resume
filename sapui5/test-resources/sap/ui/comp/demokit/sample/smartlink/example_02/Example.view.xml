<core:View xmlns:core="sap.ui.core" xmlns="sap.ui.comp.smarttable"
	xmlns:smartField="sap.ui.comp.smartfield" xmlns:sl="sap.ui.comp.navpopover"
	xmlns:m="sap.m" xmlns:l="sap.ui.layout"
	xmlns:customData="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
	controllerName="sap.ui.comp.sample.smartlink.example_02.Example">

	<l:VerticalLayout class="sapUiContentPadding">
		<l:content>
			<m:VBox>
				<m:Text class="sapUiSmallMarginTop, sapUiLargeMarginBottom"
					text="Fields 'Name', 'ProductId' and 'Category' are annotated as 'SemanticObject' in metadata. In CrossApplicationNavigation there are maintained 2 targets for SemanticObject of 'Name', 1 target for 'ProductId' and 0 target for 'Category'. " />

				<m:Text class="sapUiLargeMarginTop"
					text="Example: Buttons linked to field 'Name', 'ProductId' and 'Category'" />
				<m:HBox>
					<m:Button id="IDButtonOfName" class="sapUiTinyMarginBeginEnd"
						text="Show Details" press="onPressButton" />
					<m:Button id="IDButtonOfProductId" class="sapUiTinyMarginBeginEnd"
						text="Show Details" press="onPressButton" />
					<m:Button id="IDButtonOfCategory" class="sapUiTinyMarginBeginEnd"
						text="Show Details" press="onPressButton" />
				</m:HBox>

				<m:Text class="sapUiLargeMarginTop"
					text="Example: Images linked to field 'Name', 'ProductId' and 'Category'" />
				<m:HBox>
					<m:Image id="IDImageOfName" class="sapUiTinyMarginBeginEnd"
						src="test-resources/sap/ui/demokit/explored/img/HT-6100.jpg"
						press="onPressImage" />
					<m:Image id="IDImageOfProductId" class="sapUiTinyMarginBeginEnd"
						src="test-resources/sap/ui/demokit/explored/img/HT-6100.jpg"
						press="onPressImage" />
					<m:Image id="IDImageOfCategory" class="sapUiTinyMarginBeginEnd"
						src="test-resources/sap/ui/demokit/explored/img/HT-6100.jpg"
						press="onPressImage" />
				</m:HBox>

				<m:Text class="sapUiLargeMarginTop"
					text="Example: SmartField embedded in SmartTable. Columns linked to field 'Name', 'ProductId' and 'Category'" />
				<SmartTable tableType="ResponsiveTable"
					enableAutoBinding="true" entitySet="ProductCollection"
					useVariantManagement="false" useTablePersonalisation="false"
					showRowCount="false" useExportToExcel="false">
					<semanticObjectController>
						<sl:SemanticObjectController
							prefetchNavigationTargets="true" />
					</semanticObjectController>
				</SmartTable>

				<m:Text class="sapUiLargeMarginTop"
					text="Example: SmartField embedded in SmartTable. Columns linked to field 'Name', 'ProductId' and 'Category'" />
				<SmartTable tableType="ResponsiveTable" entitySet="ProductCollection"
					useVariantManagement="false" useTablePersonalisation="false"
					showRowCount="false" useExportToExcel="false">
					<m:Table items="{/ProductCollection}">
						<m:columns>
							<m:Column customData:p13nData='\{"columnKey":"Name"\}'>
								<m:Label text="Name" />
							</m:Column>
							<m:Column customData:p13nData='\{"columnKey":"ProductId"\}'>
								<m:Text text="Product ID" />
							</m:Column>
							<m:Column customData:p13nData='\{"columnKey":"Category"\}'>
								<m:Text text="Category" />
							</m:Column>
						</m:columns>
						<m:items>
							<m:ColumnListItem>
								<m:cells>
									<smartField:SmartField value="{Name}">
										<smartField:controlProposal>
											<smartField:ControlProposal
												controlType="ObjectIdentifier" />
										</smartField:controlProposal>
									</smartField:SmartField>
									<smartField:SmartField value="{ProductId}">
										<smartField:controlProposal>
											<smartField:ControlProposal
												controlType="ObjectIdentifier" />
										</smartField:controlProposal>
									</smartField:SmartField>
									<smartField:SmartField value="{Category}">
										<smartField:controlProposal>
											<smartField:ControlProposal
												controlType="ObjectIdentifier" />
										</smartField:controlProposal>
									</smartField:SmartField>
								</m:cells>
							</m:ColumnListItem>
						</m:items>
					</m:Table>
				</SmartTable>

			</m:VBox>
		</l:content>
	</l:VerticalLayout>
</core:View>