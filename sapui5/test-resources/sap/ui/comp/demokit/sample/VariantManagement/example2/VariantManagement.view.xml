<mvc:View
	height="100%"
	controllerName="sap.ui.comp.sample.VariantManagement.example2.VariantManagement"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:m="sap.m"
	xmlns="sap.ui.comp.variants">
	<l:VerticalLayout>
		<m:Label text="Variants"/>
		<VariantManagement select="onSelect" save="onSave" enabled="true" manage="onManage" showExecuteOnSelection="true" showShare="true">
			<variantItems>
				<VariantItem text="ONE" key="1" global="true" readOnly="true" />
				<VariantItem text="TWO" key="2" global="true" readOnly="true" />
				<VariantItem text="THREE" key="3" global="true" readOnly="true" />
				<VariantItem text="FOUR" key="4" global="true" readOnly="true" />
				<VariantItem text="FIVE" key="5" global="true" readOnly="true" />
				<VariantItem text="SIX" key="6" global="true" readOnly="true" />
				<VariantItem text="SEVEN" key="7" global="true" readOnly="true" />
				<VariantItem text="EIGHT" key="8" global="true" readOnly="true" />
				<VariantItem text="NINE" key="9" global="true" readOnly="true" />				
			</variantItems>
		</VariantManagement>
	</l:VerticalLayout>
</mvc:View>