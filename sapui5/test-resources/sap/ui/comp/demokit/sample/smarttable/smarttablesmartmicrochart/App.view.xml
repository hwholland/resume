<core:View xmlns:core="sap.ui.core" xmlns:mc="sap.ui.comp.smartmicrochart"
	xmlns:customData="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
	xmlns:table="sap.ui.table" xmlns:st="sap.ui.comp.smarttable" xmlns:m="sap.m"
	controllerName="sap.ui.comp.sample.smarttable.smarttablesmartmicrochart.App">
	<m:Page id="page" title="SmartTable with SmartBulletMicroChart"
		enableScrolling="false">
		<m:VBox fitContainer="true">
			<st:SmartTable id="SmartTableSmartBulletMicroChart"
				tableType="ResponsiveTable" entitySet="Products" header="Products"
				useTablePersonalisation="true" showRowCount="true" useExportToExcel="false"
				enableAutoBinding="true" beforeRebindTable="onBeforeRebindTable">
				<st:layoutData>
					<m:FlexItemData growFactor="1" />
				</st:layoutData>
				<m:Table>
					<m:columns>
						<m:Column width="150px" hAlign="Left">
							<m:customData>
								<core:CustomData key="p13nData"
									value='\{"columnKey": "Product", "maxLength": "10","columnIndex":"1", "leadingProperty": "Product"}' />
							</m:customData>
							<m:Text text="{/#ProductType/Product/@sap:label}" />
						</m:Column>
						<m:Column width="150px" id="Chart"
							hAlign="Left">
							<m:customData>
								<core:CustomData key="p13nData"
									value='\{"columnKey": "Product", "maxLength": "10","columnIndex":"2", "leadingProperty":"Product"}' />
							</m:customData>
							<m:Text text="Smart Bullet Micro Chart" />
						</m:Column>
					</m:columns>
					<m:items>
						<m:ColumnListItem>
							<m:cells>
								<m:Text text="{Product}" />
								<mc:SmartBulletMicroChart id="ItemsSmartBulletMicroChart"
									entitySet="Products" >
								</mc:SmartBulletMicroChart>
							</m:cells>
						</m:ColumnListItem>
					</m:items>
				</m:Table>
			</st:SmartTable>
		</m:VBox>
	</m:Page>
</core:View>
