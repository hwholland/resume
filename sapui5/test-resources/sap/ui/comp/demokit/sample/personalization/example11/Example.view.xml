<core:View xmlns:core="sap.ui.core" xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns="sap.m" xmlns:table="sap.ui.table"
	controllerName="sap.ui.comp.sample.personalization.example11.Example">

	<!-- Limitation for Filter on TreeTable: Filter works on ODataTreeBinding. 
		If as filter result a table line is found that is NOT on ROOT level the backward 
		path determination to the root is not executed by the TreeTable!! (due to 
		performance). Due to this the full qualified tree cannot be created and therefore 
		the TreeTable does not support the whole filter logic. -->

	<table:TreeTable id="Example_For_TreeTable_with_OData"
		selectionMode="None" showColumnVisibilityMenu="false" visibleRowCount="20"
		visibleRowCountMode="Auto" rootLevel="1" expandFirstLevel="true"
		collapseRecursive="false">

		<table:toolbar>
			<Toolbar design="Transparent" height="2rem">
				<Title text="tree table hierarchy" />
				<ToolbarSpacer />
				<Button icon="sap-icon://action-settings" press="onP13nDialogPress" />
			</Toolbar>
		</table:toolbar>

	</table:TreeTable>

</core:View>
