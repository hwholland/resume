<mvc:View
  controllerName="sap.ui.demo.chartdemo.view.Master"
  displayBlock="true"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:fct="sap.suite.ui.commons"

  xmlns:l="sap.ui.layout"
  xmlns:core="sap.ui.core"
>
   

  <Page
    title="Viz Chart DemoApp"
    class="marginBoxContent"
    showNavButton="false">
 

    <List
    id="MeasureList"
    mode="MultiSelect"
    includeItemInSelection="true"
     >
    <headerToolbar>

        <Toolbar 
          class="measureToolBar">
        <Label text="Measure" class="toolBarTextHeader"></Label>
      </Toolbar>
      </headerToolbar>
      
      <StandardListItem
      title="Price"
      description="price"
      contexts="1"
      selected="true"
     />
     <StandardListItem
      title="WeightMeasures"
      description="weight measures"
      contexts="2"
      selected="true"
     />
     <StandardListItem
      title="Quantity"
      description="quantity"
      selected="true"
     />
</List>

  
<Toolbar 
    class="measureToolBar">
        <Label text="Chart Type" class="toolBarText"></Label>
      </Toolbar>
  
   <content>
       <Select
        id="select"
        width="80%" name="test"
        class="selectType" >

        <items>
          <core:Item text="Bar" key="0"/>
        </items>
        <items>
          <core:Item text="Line" key="1"/>
        </items>
        <items>
          <core:Item text="Column" key="2"/>
        </items>
        <items>
          <core:Item text="Stacked Column" key="3"/>
        </items>
      </Select>
      <Select
        id="selectColor"
        width="80%" name="test"
        class="selectColor" >
        <items>
          <core:Item text="Default Color" key="0"/>
        </items>
        <items>
          <core:Item text="Semantic Color" key="2"/>
        </items>
      </Select>
    </content>
    <Toolbar 
      class="measureToolBar">
        <Label text="Popover Effect" class="toolBarText"></Label>
      </Toolbar>
    <content title="pop">
    <Select
        id="selectPopover"
        width="80%" name="test" class="selectPop" >
        <items>
          <core:Item text="Default" key="0"/>
        </items>
        <items>
          <core:Item text="Customer Popover" key="1"/>
        </items>
      </Select>
  </content>
  </Page>
</mvc:View>


  
