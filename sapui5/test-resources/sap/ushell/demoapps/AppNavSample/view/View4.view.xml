<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m" controllerName="sap.ushell.demo.AppNavSample.view.View4"
	xmlns:form="sap.ui.layout.form"
	xmlns:l="sap.ui.layout"
    xmlns:customData="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="Get semanticObjectLinks and isIntentSupported">
		<content>
			<Button id="btntoView2V1" text="toView2" press="handleBtn1Press" class="testToView2Btn"></Button>
			<Link href="{/toView2_href}" text="to View 2 (via link)"
				tooltip="to View 2 (via link, note the href generation)"></Link>
			<form:SimpleForm 
                id="form"
                width="auto"
                layout="ResponsiveGridLayout"
                editable="true"
                labelSpanL="3"
                labelSpanM="3"
                emptySpanL="4"
                emptySpanM="4"
                columnsL="1"
                columnsM="1"
                title="CrossApplicationNavigation#getSemanticObjectLinks"
                minWidth="1024"
                maxContainerCols="2">

              <Label text="Semantic Object" />
              <Input id="f2" type="Text" value="{mdlInput>/SO}" placeholder="Semantic Object" liveChange="handleTextLiveChange" />
              <Label text="Action" />
              <Input id="f3" value="{mdlInput>/action}" type="Text" liveChange="handleTextLiveChange" />
              <Label text="params" />
              <HBox>
                  <Input id="f4" class="sapUiForceWidthAuto" value="{mdlInput>/params}" type="Text" placeholder="params" tooltip="parameter string" liveChange="handleTextLiveChange" />
                  <Button id="btnAddParams" text="Add" press="handleBtnAddParamsPress" class="sapUiSmallMarginBeginEnd"/>
              </HBox>
              <Label text="treat TechHint As Filter"/><Switch state="{mdlInput>/treatTechHintAsFilter}" />
              <Label text="with at least one Used Param"/><Switch state="{mdlInput>/withAtLeastOneUsedParam}" />
              <Label text="Compact Links" />
              <Switch state="{mdlInput>/compactIntents}" />
			</form:SimpleForm>
            <Button id="btnGSOLinks" text="getSemanticObjectLinks (for Semantic Object and params, ignoring action!)" press="handleBtnGSOPress" class="testToView2Btn"></Button>
            <Panel headerText="Status">
                <FlexBox direction="Column" alignItems="Start">
                  <items>
                    <HBox>
                        <Label text="isIntentSupported?" class="sapUiTinyMarginEnd"/>
                        <core:Icon src="sap-icon://status-error" color="{v1>/supportedColor}" />
                        <Text text="{v1>/supported}"/>
                    </HBox>
                    <HBox>
                        <Label text="isNavigationSupported?" class="sapUiTinyMarginEnd"/>
                        <core:Icon src="sap-icon://status-error" color="{v1>/navSupportedColor}" />
                        <Text text="{v1>/navSupported}"/>
                    </HBox>
                    <HBox>
                        <Label text="Hash length:" class="sapUiTinyMarginEnd"/>
                        <Text text="{v1>/hashFragmentLength} characters" />
                    </HBox>
                    <HBox>
                        <Label text="Hash:" class="sapUiSmallMarginEnd"/>
                        <Text text="{v1>/hashFragment}" />
                    </HBox>
                  </items>
                </FlexBox>
            </Panel>

		   <List id="categoryList"
		         headerText="Results (getSemanticObjectLinks)"
		         mode="SingleSelectMaster"
			     items="{v1>/links}">
	            <items>
                    <InputListItem>
                        <FlexBox alignItems="Center" justifyContent="SpaceBetween">
                            <items>
                                <Text maxLines="2" width="250px" text="{v1>name}" />
                                <Link textAlign="Begin" text="{v1>link}" width="500px" href="{v1>escapedLink}" />
                                <Button icon="sap-icon://zoom-in" customData:linkText="{v1>link}" press="handleBtnExpandPress"/>
                            </items>
                        </FlexBox>
                    </InputListItem>
	                <!-- <StandardListItem
	                    title="{v1>name}"
	                    text="{v1>name}"
	                    type="Active"
	                    press="handleListLinkPress" >
	                </StandardListItem> -->
	            </items>
            </List>
		</content>
	</Page>
</core:View>
