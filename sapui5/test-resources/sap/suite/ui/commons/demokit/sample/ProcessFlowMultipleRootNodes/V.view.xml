<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
  xmlns:m="sap.m" xmlns="sap.suite.ui.commons"
  controllerName="sap.suite.ui.commons.sample.ProcessFlowMultipleRootNodes.C"
  xmlns:html="http://www.w3.org/1999/xhtml">
  <html:br />
  <m:Panel>
    <m:Label
      text="Process Flow sample case with zooming and highlight path buttons - multiple root nodes" />
    <html:br />
    <m:Button text="Zoom In" press="onZoomIn" />
    <m:Button text="Zoom Out" press="onZoomOut" />
    <m:ToggleButton text="Toggle HighlightPath"
      type="Accept" press="onHighlightPath" />
    <ProcessFlow id="processflow2" foldedCorners="true"
      wheelZoomable="false" scrollable="true" class="PFLayoutSpec" nodes="{/nodes}"
      lanes="{/lanes}">
      <nodes>
        <ProcessFlowNode laneId="{lane}" nodeId="{id}"
          title="{title}" children="{children}" state="{state}" stateText="{stateText}"
          texts="{texts}" highlighted="{highlighted}" focused="{focused}"
          titleAbbreviation="{titleAbbreviation}" />
      </nodes>
      <lanes>
        <ProcessFlowLaneHeader laneId="{id}" iconSrc="{icon}"
          text="{label}" position="{position}" />
      </lanes>
    </ProcessFlow>
    <html:br />
  </m:Panel>
</mvc:View>