<core:View controllerName="sap.suite.ui.commons.sample.TimelineBinding.Timeline"
	xmlns="sap.suite.ui.commons" xmlns:ui="sap.ui.layout" xmlns:m="sap.m"
	xmlns:core="sap.ui.core">
	<m:Panel id='IdtimeLinePanel'>
		<m:Toolbar width="100%">
			<m:Button id="idNormalView" text="Single-Sided Timeline" press="showNormalView" />
			<m:Button id="idDblSided" text="Double-Sided Timeline" press="showDblSided" />
			<m:CheckBox id="idCheckBox" text="Show All in Filter"
				width="120px" selected="true" select="onSelect" />

			<m:CheckBox id="idCheckBoxScroll" text="Enable Scrolling"
				width="120px" selected="false" select="onSelectScroll" />

		</m:Toolbar>
		<Timeline id="idTimeline" enableBackendFilter="true" growing="true"
			growingThreshold="3" enableScroll="false" showHeaderBar="true"
			showIcons="true" content="{/Invoices}" filterList="{/Customers}" enableDoubleSided="true">
			<content>
				<TimelineItem id="idTimelineItem" dateTime="{OrderDate}"
					userName="{CustomerID}" title="{CustomerName}" icon="sap-icon://activity-items"
					text="{ProductName}">
				</TimelineItem>
			</content>

			<filterList>
				<TimelineFilterListItem id="idTimelineFilterListItem"
					key="{CustomerID}" text="{CompanyName}">
				</TimelineFilterListItem>
			</filterList>
		</Timeline>
	</m:Panel>
</core:View>