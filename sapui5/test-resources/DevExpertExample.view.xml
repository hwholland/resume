<core:View xmlns:core="sap.ui.core" xmlns="sap.m"
	controllerName="sap.ui.comp.sample.smartlink.example_DevExpert.Example">

	<Input
		value="{path:'/Price', type:'sap.ui.model.type.Float', formatter:'.formatter.addTax', formatOptions: {
                   minFractionDigits: 2,
                   maxFractionDigits: 2
           } }"
		width="30%" />

	<Text text="{/Price}" width="30%" />

	<Button text="{i18n>ResetModel}" press="onPressResetModel" />

</core:View>