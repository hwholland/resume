<core:View xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:l="sap.ui.layout"
       xmlns:sb="sap.suite.ui.smartbusiness" xmlns:suite="sap.suite.ui.commons"
       controllerName="sap.suite.ui.smartbusiness.mpt.view.S1">
       <Page id="page" class="mptViewS1">
              <content>
<!--               		<ObjectHeader title=""> -->
<!--                            <attributes> -->
<!--                                   <ObjectAttribute text="" /> -->
<!--                            </attributes> -->
<!--                      </ObjectHeader> -->
			<Table id="tileGrid" items="{path:'/CHIPS_USER',factory:'.getTile'}" inset="false" fixedLayout="false" mode="MultiSelect">
				<headerToolbar>
					<Toolbar>
						<Label id="chipsTableLabel"></Label>
			            <ToolbarSpacer></ToolbarSpacer>
			            <SearchField width="15rem" showMagnifier="false" search="searchTile" />
			            <Button icon="sap-icon://sort" press="handleSortPress" tooltip="{i18n>SORT}" />
			            <Button icon="sap-icon://filter" press="handleFilterPressN" tooltip="{i18n>FILTER}" />
					</Toolbar>
				</headerToolbar>
				<infoToolbar>
						<Toolbar id="filterToolbar" active="false" visible="false">
							<content>
								<Label id="mptInfo"/>
								<ToolbarSpacer/>
								<core:Icon src="sap-icon://building"/>
							</content>
						</Toolbar>
				</infoToolbar>
				<columns>
					<Column>
						<Text text="{i18n>TILE_TYPE}" />
					</Column>
					<Column>
						<Text text="{i18n>TARGET_THRESHOLD}" />
					</Column>
					<Column>
						<Text text="{i18n>ADDL_FILTERS}" />
					</Column>
					<Column>
						<Text text="{i18n>ADDED_ON}" />
					</Column>
				</columns>
			</Table>

              </content>
       </Page>
</core:View>
