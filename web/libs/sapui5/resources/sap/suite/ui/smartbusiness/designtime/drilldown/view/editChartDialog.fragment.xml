<Dialog xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns="sap.m"
	id='editChartDialog' title="{i18n>CHART_LEVEL_SETTINGS}"
	contentHeight="30%" contentWidth="30%" horizontalScrolling='false'
	verticalScrolling='true' resourceBundleName="myBundle"
	resourceBundleAlias="i18n">
	<content>
		<f:Form id="FormEditMeasureAdvanced" 
			editable="true" visible="true" class="editMeasureForm">
			<f:layout>
				<f:ResponsiveGridLayout/>
			</f:layout>
			<f:formContainers>
				<f:FormContainer>
					<f:formElements>
						<!-- <f:FormElement> <CheckBox id="useAsThreshold" width="100%" text="{i18n>MSG_CHOOSE_THRESHOLD_MEASURE}" 
							visible="false"></CheckBox> </f:FormElement> -->
						<f:FormElement>
							<f:fields>
								<VBox>
									<CheckBox id="enableStacking" text="{i18n>ENABLE_STACKING}"
										select="onEnableStacking"></CheckBox>
								</VBox>
							</f:fields>
						</f:FormElement>
						<f:FormElement>
							<f:fields>
								<VBox id="stackingOptions" visible="false">
									<RadioButton groupName="GroupA" id="addMsrToStack"
										text="{i18n>STACK_ALL_MEASURES}" select="onMsrStacking"
										selected="true" />
									<RadioButton groupName="GroupA" id="dimStack"
										text="{i18n>CHOOSE_STACK_DIMENSION}" select="onDimStacking" />
									<Select id="dimsToStack" width="45%" visible="false"
										class="dialogComboBoxes" change="genericSelectTooltipChange"/>
								</VBox>
							</f:fields>
						</f:FormElement>
						<f:FormElement>
							<f:fields>
								<Text text="{i18n>STACKING_INFO}"/>
							</f:fields>
						</f:FormElement>
						<f:FormElement>
							<f:fields>
								<HBox id="Dual_config_2" class="stacklayout">
									<List items="{path: 'DUAL_AXIS1>/DATA'}">
									    <headerToolbar>
									      <Toolbar>
									        <Text text="{i18n>STACK1}"/>
									        <ToolbarSpacer/>
									        <Text id="stack1list_edit"/>
									      </Toolbar>
									    </headerToolbar>
										<items>
											<CustomListItem type="Active" press="stack1removed">
												<HBox class="stack1Listlayout">
													<Text text="{DUAL_AXIS1>name}" />
													<core:Icon src="sap-icon://navigation-right-arrow" />
												</HBox>
											 </CustomListItem>
										</items>
									</List>
									<List items="{path: 'DUAL_AXIS2>/DATA'}">
									    <headerToolbar>
									      <Toolbar>
									        <Text text="{i18n>STACK2}"/>
									        <ToolbarSpacer/>
									        <Text id="stack2list_edit"/>
									      </Toolbar>
									    </headerToolbar>
										<items>
											<CustomListItem type="Active" press="stack2removed">
												<HBox class="stack2Listlayout">
													<core:Icon src="sap-icon://navigation-left-arrow" />
													<Text text="{DUAL_AXIS2>name}" />
												</HBox>
											 </CustomListItem>
										</items>
									</List>
								</HBox>
							</f:fields>
						</f:FormElement>
						<f:FormElement>
							<f:fields>
								<VBox id="MainMeasureSettings" visible="false">
									<Label text="{i18n>MAIN_MEASURE}" 
										required='true'>
									</Label>
									<Select id="choroplethKpiMeasurechartsetting" 
										change="handleMainMeasureChangechartsettings" items="{SB_DDACONFIG>/items}"
										selectedKey="{SB_DDACONFIG>/MAIN_MEASURE}">
										<core:Item key="{path:'SB_DDACONFIG>NAME'}" text="{path:'SB_DDACONFIG>NAME'}" />
									</Select>
								</VBox>
							</f:fields>
						</f:FormElement>
						<f:FormElement>
							<f:fields>
								<VBox id="ThresholdMeasureSettings" visible="false">
									<items>
										<Label text="{i18n>MSG_ADD_THRESHOLD_MEASURE}" 
											id="messageAddThresholdMeasure" />
										<Label text="{i18n>THRESHOLD_MEASURE}"></Label>
										<Select id="thresholdMeasureChart" class="dialogComboBoxes" items="{SB_DDACONFIG>/items}" selectedKey="{SB_DDACONFIG>/THRESHOLD_MEASURE}" change="genericSelectTooltipChange">
											<core:Item text="{path:'SB_DDACONFIG>NAME'}" key="{path:'SB_DDACONFIG>NAME'}" />
										</Select>
									</items>
								</VBox>
							</f:fields>
						</f:FormElement>
					</f:formElements>
				</f:FormContainer>
			</f:formContainers>
		</f:Form>

	</content>
	<beginButton>
		<Button text="{i18n>OK}" press="onEditChartDialogOk" />
	</beginButton>
	<endButton>
		<Button text="{i18n>CANCEL}" press="onEditChartDialogCancel" />
	</endButton>
</Dialog>
