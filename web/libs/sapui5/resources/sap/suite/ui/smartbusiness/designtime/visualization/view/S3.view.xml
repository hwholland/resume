<core:View xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:l="sap.ui.layout"
	xmlns:sb="sap.suite.ui.smartbusiness" xmlns:suite="sap.suite.ui.commons"
	xmlns:ui="sap.ca.ui" controllerName="sap.suite.ui.smartbusiness.designtime.visualization.view.S3">
	<Page enableScrolling="true">
		<content>
			<ObjectHeader title="{tileConfig>/EVALUATION/TITLE}">
				<attributes>
					<ObjectAttribute id="orderOperation" text="{tileConfig>/EVALUATION/ID}" visible="{SB_APP_SETTING>/ID_VISIBLE}"/>
					<ObjectAttribute id="kpiTitleAsSubtitle" text="{path: 'tileConfig>/EVALUATION/INDICATOR_TITLE', formatter: '.formatIndicatorTitle'}" />
				</attributes>
			</ObjectHeader>
			<Table id="tileGrid" items="{path:'tileConfig>/CHIPS',factory:'.getChipRow'}" inset="false" fixedLayout="false">
				<headerToolbar>
					<Toolbar>
						<Label id="chipsTableLabel" text="{path:'tileConfig>/EVALUATION/CHIPS_COUNT', formatter:'.formatChipsCount'}"></Label>
			            <ToolbarSpacer></ToolbarSpacer>
			            <Button icon="sap-icon://sort" press="handleSortPress" tooltip="{i18n>FILTER}" />
			            <Button icon="sap-icon://filter" press="handleFilterPress" tooltip="{i18n>SORT}"/>
					</Toolbar>
				</headerToolbar>
				<columns>
<!-- 					<Column> -->
<!-- 						<Text text="{i18n>TILE_TYPE}" /> -->
<!-- 					</Column> -->
<!-- 					<Column> -->
<!-- 						<Text text="{i18n>NAVIGATION}" /> -->
<!-- 					</Column> -->
<!-- 					<Column> -->
<!-- 						<Text text="{i18n>STATUS}" /> -->
<!-- 					</Column> -->
<!-- 					<Column/> -->
<!-- 					<Column/> -->
<!-- 					<Column/> -->
				</columns>
				<infoToolbar>
						<Toolbar id="filterToolbar" active="false" visible="false">
							<content>
								<Label id="visualizationInfo"/>
								<ToolbarSpacer/>
								<core:Icon src="sap-icon://building"/>
							</content>
						</Toolbar>
					</infoToolbar>
			</Table>
		</content>
	</Page>
</core:View>
