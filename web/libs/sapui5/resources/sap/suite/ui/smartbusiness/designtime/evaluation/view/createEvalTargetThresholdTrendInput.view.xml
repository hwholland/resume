<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout" xmlns:form="sap.ui.layout.form" xmlns="sap.m"
	xmlns:evaluation="sap.suite.ui.smartbusiness.designtime.evaluation.view"
	controllerName="sap.suite.ui.smartbusiness.designtime.evaluation.view.createEvalTargetThresholdTrendInput"
	xmlns:html="http://www.w3.org/1999/xhtml" displayBlock="false" height="100%">
	<form:SimpleForm>
		<form:content>
			<core:Title text="{i18n>TARGET_THRESHOLDS_AND_TRENDS}" />
			<l:Grid defaultIndent="L1 M1 S1" defaultSpan="L9 M9 S10">
				<l:content>

					<Text text="" id="kpiGoalTypeLabel" />

					<form:SimpleForm id="EvaluationTargetThresholdTrendInputForm1"
						class="EvaluationTargetThresholdTrendInputForm" editable="true"
						layout="ResponsiveGridLayout" maxContainerCols="3" emptySpanL="2"
						emptySpanM="2" columnsL="1" columnsM="1" labelSpanL="4"
						labelSpanM="4">
						<form:content>

							<Label text="{i18n>VALUE_TYPE}" id="valueTypeLabel">
								<layoutData>
									<l:GridData span="L4 M4 S4" />
								</layoutData>
							</Label>
							<Select id="valueTypeSelect" change="valueTypeSelectChange"
								selectedKey="{/VALUES_SOURCE}">
								<layoutData>
									<l:GridData span="L7 M7 S7" />
								</layoutData>
								<items>
									<core:Item text="{i18n>FIXED_VALUE}" key="FIXED" />
									<core:Item text="{i18n>MEASURE}" key="MEASURE" />
									<core:Item text="{i18n>THRESHOLD_RELATIVE_TO_TARGET}"
										key="RELATIVE" />
								</items>
							</Select>

							<Label>
							<layoutData>
									<l:GridData span="L4 M4 S4" />
							</layoutData>
							</Label>

							<!-- <Image id="kpiGoalTypeImage"> -->
							<!-- <layoutData> -->
							<!-- <l:GridData span="L7 M7 S7" /> -->
							<!-- </layoutData> -->
							<!-- </Image> -->
							<VBox id="targetThresholdBar">
							<layoutData>
									<l:GridData span="L7 M7 S7" />
								</layoutData>
							</VBox>


<!-- 							<VBox> -->
<!-- 								<evaluation:thresholdAndTargetBar -->
<!-- 									criticalLow="100" warningLow="200" target="300" warningHigh="400" -->
<!-- 									criticalHigh="500" goalType="{/GOAL_TYPE}" /> -->
<!-- 								<layoutData> -->
<!-- 									<l:GridData span="L7 M7 S7" /> -->
<!-- 								</layoutData> -->
<!-- 							</VBox> -->


						</form:content>
					</form:SimpleForm>

					<HBox alignItems="Center">
						<Text text="{i18n>TARGET_THRESHOLDS_AND_TRENDS}" design="Bold" />
						<Button id="thresholdExample" icon="sap-icon://message-information" type="Transparent" press="openThersholdExample"/>
					</HBox>

					<form:SimpleForm id="EvaluationTargetThresholdTrendInputForm2"
						class="EvaluationTargetThresholdTrendInputForm" editable="true"
						layout="ResponsiveGridLayout" maxContainerCols="3" emptySpanL="2"
						emptySpanM="2" columnsL="1" columnsM="1" labelSpanL="4"
						labelSpanM="4">
						<form:content>

							<!-- CRITICAL HIGH CONDITION STARTS HERE -->

							<Label text="{i18n>CRITICAL_HIGH}" id="criticalHighLabel">
								<layoutData>
									<l:GridData span="L4 M4 S4" />
								</layoutData>
							</Label>

							<Input id="evaluationCriticalHigh" type="Text" change="validateThresholdValue"
								valueHelpRequest="openMeasureSelectDialog" enabled="true"
								value="{/CRITICALHIGH}" editable="true" showValueStateMessage="false">
								<customData>
									<core:CustomData key="CRITICALHIGH" value="CRITICALHIGH" />
								</customData>
								<layoutData>
									<l:GridData span="L3 M3 S3" />
								</layoutData>
							</Input>

							<Text text="{i18n>RELATIVE_TO_SELECTED_TARGET_MEASURE}"
								design="Bold" id="relativeCriticalHighText">
								<layoutData>
									<l:GridData span="L4 M4 S4" />
								</layoutData>
							</Text>

							<!-- WARNING HIGH CONDITION STARTS HERE -->

							<Label text="{i18n>WARNING_HIGH}" id="warningHighLabel">
								<layoutData>
									<l:GridData span="L4 M4 S4" />
								</layoutData>
							</Label>

							<Input id="evaluationWarningHigh" type="Text" change="validateThresholdValue"
								valueHelpRequest="openMeasureSelectDialog"
								showValueStateMessage="false" enabled="true" value="{/WARNINGHIGH}"
								editable="true">
								<customData>
									<core:CustomData key="WARNINGHIGH" value="WARNINGHIGH" />
								</customData>
								<layoutData>
									<l:GridData span="L3 M3 S3" />
								</layoutData>
							</Input>

							<Text text="{i18n>RELATIVE_TO_SELECTED_TARGET_MEASURE}"
								design="Bold" id="relativeWarningHighText">
								<layoutData>
									<l:GridData span="L4 M4 S4" />
								</layoutData>
							</Text>

							<!-- TARGET CONDIITON STARTS HERE -->
							<Label text="{i18n>TARGET}" id="targetLabel">
								<layoutData>
									<l:GridData span="L4 M4 S4" />
								</layoutData>
							</Label>

							<Input id="evaluationTarget" type="Text" valueHelpRequest="openMeasureSelectDialog"
								showValueStateMessage="false" enabled="true" value="{/TARGET}"
								editable="true">
								<customData>
									<core:CustomData key="TARGET" value="TARGET" />
								</customData>
								<layoutData>
									<l:GridData span="L7 M7 S7" />
								</layoutData>
							</Input>

							<!-- WARNING LOW CONDITION STARTS HERE -->

							<Label text="{i18n>WARNING_LOW}" id="warningLowLabel">
								<layoutData>
									<l:GridData span="L4 M4 S4" />
								</layoutData>
							</Label>

							<Input id="evaluationWarningLow" type="Text" change="validateThresholdValue"
								valueHelpRequest="openMeasureSelectDialog"
								showValueStateMessage="false" enabled="true" value="{/WARNINGLOW}"
								editable="true">
								<customData>
									<core:CustomData key="WARNINGLOW" value="WARNINGLOW" />
								</customData>
								<layoutData>
									<l:GridData span="L3 M3 S3" />
								</layoutData>
							</Input>

							<Text text="{i18n>RELATIVE_TO_SELECTED_TARGET_MEASURE}" id="relativeWarningLowText">
								<layoutData>
									<l:GridData span="L4 M4 S4" />
								</layoutData>
							</Text>

							<!-- CRITICAL LOW CONDITION STARTS HERE -->
							<Label text="{i18n>CRITICAL_LOW}" id="criticalLowLabel">
								<layoutData>
									<l:GridData span="L4 M4 S4" />
								</layoutData>
							</Label>

							<Input id="evaluationCriticalLow" type="Text" change="validateThresholdValue"
								valueHelpRequest="openMeasureSelectDialog"
								showValueStateMessage="false" enabled="true" value="{/CRITICALLOW}"
								editable="true">
								<customData>
									<core:CustomData key="CRITICALLOW" value="CRITICALLOW" />
								</customData>
								<layoutData>
									<l:GridData span="L3 M3 S3" />
								</layoutData>
							</Input>

							<Text text="{i18n>RELATIVE_TO_SELECTED_TARGET_MEASURE}" id="relativeCriticalLowText">
								<layoutData>
									<l:GridData span="L4 M4 S4" />
								</layoutData>
							</Text>

							<!-- REFERENCE VALUE CONDITION STARTS HERE -->
							<Label text="{i18n>REFERENCE_VALUE}" id="referenceValueLabel">
								<layoutData>
									<l:GridData span="L4 M4 S4" />
								</layoutData>
							</Label>

							<Input id="evaluationReferenceValue" type="Text" enabled="true"
								valueHelpRequest="openMeasureSelectDialog" value="{/REFERENCE_VALUE}"
								editable="true">
								<customData>
									<core:CustomData key="REFERENCE_VALUE" value="REFERENCE_VALUE" />
								</customData>
								<layoutData>
									<l:GridData span="L7 M7 S7" />
								</layoutData>
							</Input>
							<Label text="{i18n>TREND}" id="trendLabel">
								<layoutData>
									<l:GridData span="L4 M4 S4" />
								</layoutData>
							</Label>
							<Input id="evaluationTrend" type="Text" enabled="true"
								valueHelpRequest="openMeasureSelectDialog" value="{/TREND}"
								editable="true">
								<customData>
									<core:CustomData key="TREND" value="TREND" />
								</customData>
								<layoutData>
									<l:GridData span="L7 M7 S7" />
								</layoutData>
							</Input>
						</form:content>
					</form:SimpleForm>
				</l:content>
			</l:Grid>
		</form:content>
	</form:SimpleForm>
</core:View>