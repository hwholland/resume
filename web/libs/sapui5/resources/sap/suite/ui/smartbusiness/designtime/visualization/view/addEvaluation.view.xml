<core:View xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:l="sap.ui.layout"
	xmlns:form="sap.ui.layout.form" xmlns:layout="sap.ui.layout" xmlns:mvc="sap.ui.core.mvc"
	controllerName="sap.suite.ui.smartbusiness.designtime.visualization.view.addEvaluation">
	<Page enableScrolling="true">
		<content>
			<form:SimpleForm id="myForm" editable="true"
				layout="ResponsiveGridLayout" maxContainerCols="3" emptySpanL="2"
				emptySpanM="2" columnsL="1" columnsM="1" labelSpanL="4" labelSpanM="4">
				<form:content>
					<core:Title text="{i18n>GENERAL}" />
					<Label text="{i18n>EVALUATION_TEMPLATE}" required="true" id="evalTemplateIdLabel">
					</Label>
					<Input id="evalTemplateId" showValueHelp="true" valueHelpOnly="true" valueHelpRequest="listAllActiveEvaluations" value="" change="changeEvalTemplate">
						<layoutData>
							<l:GridData span="L5 M5" />
						</layoutData>
					</Input>
					<Label text="{i18n>EVALUATION_ID}" required="true">
					</Label>
					<Input value="{/ID}" id="evalId" change="validateEvalId" placeholder="{i18n>EVAL_ID_PLACEHOLDER}" maxLength="40">
						<layoutData>
							<l:GridData span="L5 M5" />
						</layoutData>
					</Input>
					<Label text="{i18n>EVALUATION_TITLE}" required="true">
					</Label>
					<Input value="{/TITLE}" id="evalTitle" change="validateEvalTitle" maxLength="40">
						<layoutData>
							<l:GridData span="L5 M5" />
						</layoutData>
					</Input>
					<Label text=""></Label>
					
					<Link
						text="{path:'/NO_OF_ADDITIONAL_LANGUAGES',formatter:'.formatLangCount'}"
						press="addAdditionalLanguageDialog">
						<layoutData>
							<l:GridData span="L2 M2" />
						</layoutData>
					</Link>

					<!-- Input Parameters -->
					<core:Title text="{i18n>INPUT_PARAMETERS_FILTERS}" />
				</form:content>
			</form:SimpleForm >
			<Panel class="filtersLayout">
				<l:Grid defaultSpan="L12 M12 S12" defaultIndent="L2 M2" class="dimensionHeaders1">
					<l:content>
						<Label text="{i18n>INPUT_PARAMETERS}" design="Bold"
							required="true">
							<layoutData>
								<l:GridData span="L6 M6" />
							</layoutData>
						</Label>
						<Label text="{i18n>REQUIRED_PARAM_LIST}">
							<layoutData>
								<l:GridData span="L6 M6" />
							</layoutData>
						</Label>
						<VBox id="inputParameterLayoutHeaders">
							<layoutData>
								<l:GridData span="L11 M11" />
							</layoutData>
							<items>
								<l:Grid defaultSpan="L12 M12" vSpacing="0">
									<l:content>
										<Label text="{i18n>DIMENSION}" design="Bold">
											<layoutData>
												<l:GridData span="L3 M3" />
											</layoutData>
										</Label>
										<Label text="{i18n>OPERATOR}" design="Bold">
											<layoutData>
												<l:GridData span="L3 M3" />
											</layoutData>
										</Label>
										<Label text="{i18n>VALUES}" design="Bold">
											<layoutData>
												<l:GridData span="L3 M3" />
											</layoutData>
										</Label>
									</l:content>
								</l:Grid>
							</items>
						</VBox>
						<VBox id="inputParameterBaseLayout">
							<layoutData>
								<l:GridData span="L11 M11" />
							</layoutData>
						</VBox>
						<Link text="{i18n>OPTIONAL_DIMENTIONAL_FILTERS}" design="Bold" press="openDimensionDialog">
							<layoutData>
								<l:GridData span="L6 M6" />
							</layoutData>
						</Link>
						<!-- <Input id="selectDimensions" type="Text"
							placeholder="{i18n>SELECT_DIMENSION_TO_ADD_FILTERS}"
							showValueHelp="true" valueHelpRequest="openDimensionDialog"
							value="{/hanaView}">
							<layoutData>
								<l:GridData span="L5 M5" />
							</layoutData>
						</Input> -->
						<VBox id="dimensionLayoutHeaders">
							<layoutData>
								<l:GridData span="L11 M11" />
							</layoutData>
							<items>
								<l:Grid defaultSpan="L12 M12" class="dimensionHeaders"
									vSpacing="0">
									<l:content>
										<Label text="{i18n>DIMENSION}" design="Bold">
											<layoutData>
												<l:GridData span="L3 M3" />
											</layoutData>
										</Label>
										<Label text="{i18n>OPERATOR}" design="Bold">
											<layoutData>
												<l:GridData span="L3 M3" />
											</layoutData>
										</Label>
										<Label text="{i18n>VALUES}" design="Bold">
											<layoutData>
												<l:GridData span="L3 M3" />
											</layoutData>
										</Label>
									</l:content>
								</l:Grid>
							</items>
						</VBox>
						<VBox id="baseDimensionLayout">
							<layoutData>
								<l:GridData span="L11 M11" />
							</layoutData>
						</VBox>
					</l:content>
				</l:Grid>
			</Panel>

			<Panel id="dataSourcePanel" expandable="true" expanded="false" headerText="{i18n>DATA_SOURCE_DETAILS}">
				<content>
					<l:Grid defaultIndent="L3 M3 S3" defaultSpan="L7 M7 S7">
						<l:content>
							<form:SimpleForm minWidth="1024"
								maxContainerCols="2" editable="false" layout="ResponsiveGridLayout"
								title="{i18n>INFORMATION}" labelSpanL="2" labelSpanM="2"
								emptySpanL="3" emptySpanM="3" columnsL="1" columnsM="1">
								<form:content>
									<Label text="{i18n>KPI_TEXT}">
										<layoutData>
											<l:GridData span="L3 M3" />
										</layoutData>
									</Label>
									<Text text="{/INDICATOR}">
										<layoutData>
											<l:GridData span="L7 M7" />
										</layoutData>
									</Text>
									<Label text="{i18n>DATA_SOURCE}">
										<layoutData>
											<l:GridData span="L3 M3" linebreakL="true"
												linebreakM="true" />
										</layoutData>
									</Label>
									<Text text="{/ODATA_URL}">
										<layoutData>
											<l:GridData span="L7 M7" />
										</layoutData>
									</Text>
									<Label text="{i18n>PROPERTIES}">
										<layoutData>
											<l:GridData span="L3 M3" linebreakL="true"
												linebreakM="true" />
										</layoutData>
									</Label>
									<HBox items="{/PROPERTIES}" id="properties">
										<layoutData>
											<l:GridData span="L7 M7" />
										</layoutData>
										<items>
											<Text
												text="{parts:[{path:'NAME'},{path:'VALUE'}], formatter:'.formatProperties'}" />
										</items>
									</HBox>
								</form:content>
							</form:SimpleForm>

							<form:SimpleForm id="thresholdTrendId" minWidth="1024"
								maxContainerCols="2" editable="false" layout="ResponsiveGridLayout"
								title="{i18n>TARGET_THRESHOLD_TREND}" labelSpanL="2" labelSpanM="2"
								emptySpanL="3" emptySpanM="3" columnsL="1" columnsM="2">
								<form:content>
									<Label text="{i18n>GOAL_TYPE}">
										<layoutData>
											<l:GridData span="L3 M3" linebreakL="true"
												linebreakM="true" />
										</layoutData>
									</Label>
									<Text id="goalType"
										text="{path:'/GOAL_TYPE', formatter:'.formatGoalType'}">
										<layoutData>
											<l:GridData span="L7 M7" />
										</layoutData>
									</Text>
									<Label text="{i18n>VALUE_TYPE}">
										<layoutData>
											<l:GridData span="L3 M3" linebreakL="true"
												linebreakM="true" />
										</layoutData>
									</Label>
									<Text text="{/VALUES_SOURCE}">
										<layoutData>
											<l:GridData span="L7 M7" />
										</layoutData>
									</Text>

									<!--THRESHOLDS AND TARGET -->

									<Label id="CHlabel">
										<layoutData>
											<l:GridData span="L3 M3" linebreakL="true"
												linebreakM="true" />
										</layoutData>
									</Label>
									<Text id="CHinput" text="{/CH}" editable="false">
										<layoutData>
											<l:GridData span="L7 M7" />
										</layoutData>
									</Text>
									<Label id="WHlabel">
										<layoutData>
											<l:GridData span="L3 M3" linebreakL="true"
												linebreakM="true" />
										</layoutData>
									</Label>
									<Text id="WHinput" text="{/WH}" editable="false">
										<layoutData>
											<l:GridData span="L7 M7" />
										</layoutData>
									</Text>
									<Label id="TAlabel" text="{i18n>TARGET}">
										<layoutData>
											<l:GridData span="L3 M3" linebreakL="true"
												linebreakM="true" />
										</layoutData>
									</Label>
									<Text id="TAinput" text="{/TA}" editable="false">
										<layoutData>
											<l:GridData span="L7 M7" />
										</layoutData>
									</Text>
									<Label id="WLlabel">
										<layoutData>
											<l:GridData span="L3 M3" linebreakL="true"
												linebreakM="true" />
										</layoutData>
									</Label>
									<Text id="WLinput" text="{/WL}" editable="false">
										<layoutData>
											<l:GridData span="L7 M7" />
										</layoutData>
									</Text>
									<Label id="CLlabel">
										<layoutData>
											<l:GridData span="L3 M3" linebreakL="true"
												linebreakM="true" />
										</layoutData>
									</Label>
									<Text id="CLinput" text="{/CL}" editable="false">
										<layoutData>
											<l:GridData span="L7 M7" />
										</layoutData>
									</Text>
									<Label id="TrendLabel" text="{i18n>TREND}">
										<layoutData>
											<l:GridData span="L3 M3" linebreakL="true"
												linebreakM="true" />
										</layoutData>
									</Label>
									<Text id="Trendinput" text="{/TC}" editable="false">
										<layoutData>
											<l:GridData span="L7 M7" />
										</layoutData>
									</Text>
								</form:content>
							</form:SimpleForm>
						</l:content>
					</l:Grid>
				</content>
			</Panel>
		</content>
	</Page>
</core:View>