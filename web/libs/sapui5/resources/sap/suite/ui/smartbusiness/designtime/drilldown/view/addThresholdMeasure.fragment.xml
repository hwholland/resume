<core:FragmentDefinition xmlns="sap.m"
	xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout">
	<Dialog title="{i18n>ADD_THRESHOLD_MEASURE}" id='dialogRef'
		class='thresholdDialog' horizontalScrolling='false' verticalScrolling='false'>
		<content>
			<VBox>
				<items>
					<Label text="{i18n>MSG_ADD_THRESHOLD_MEASURE}" class='labelThreshold' />
					<l:Grid defaultSpan="L12 M12 S12">
						<l:content>
							<Label text="{i18n>THRESHOLD_MEASURE}" class='labelThreshold' vAlign = "Middle">
								<layoutData>
									<l:GridData span="L4 M4 S4" />
								</layoutData>
							</Label>
							<Select id="thresholdMeasure" items="{SB_DDACONFIG>/items}" selectedKey="{SB_DDACONFIG>/THRESHOLD_MEASURE}" change="onThresholdMeasureChange">
								<core:Item text="{path:'SB_DDACONFIG>NAME'}" key="{path:'SB_DDACONFIG>NAME'}" />
								<layoutData>
									<l:GridData span="L8 M8 S8" />
								</layoutData>
							</Select>
						</l:content>
					</l:Grid>
				</items>
			</VBox>
		</content>
		<beginButton>
			<Button text="{i18n>OK}" press="onThresholdMeasureAdded" />
		</beginButton>
		<endButton>
			<Button text="{i18n>CANCEL}" press="onThresholdMeasureCancel" />
		</endButton>
	</Dialog>
</core:FragmentDefinition>