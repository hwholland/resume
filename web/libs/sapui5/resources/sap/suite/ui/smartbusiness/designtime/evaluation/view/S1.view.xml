<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!-- SAP Smart Business (c) Copyright 2012-2015 SAP SE. All rights reserved -->

<core:View xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:l="sap.ui.layout"
	xmlns:form="sap.ui.layout.form" xmlns:layout="sap.ui.layout" xmlns:mvc="sap.ui.core.mvc"
	controllerName="sap.suite.ui.smartbusiness.designtime.evaluation.view.S1">

	<Page id="page" class="evaluationViewS1">
		<content>
			<l:VerticalLayout>
				<form:SimpleForm id="myForm" editable="true"
					layout="ResponsiveGridLayout" maxContainerCols="3" emptySpanL="2"
					emptySpanM="2" columnsL="1" columnsM="1" labelSpanL="4" labelSpanM="4">
					<form:content>
						<core:Title text="{i18n>PARAMETERS}" />
						<Label id="selectKpi" text="{i18n>SELECTED_KPI_OPI}"
							required="true">
						</Label>
						<Input id="indicatorId" showValueHelp="true" valueHelpOnly="true"
							valueHelpRequest="listAllKpis" value="{/INDICATORTITLE}" change="getKpiDetails">
							<layoutData>
								<l:GridData span="L5 M5" />
							</layoutData>
						</Input>
						<Label text="{i18n>EVALUATION_ID}" required="true">
						</Label>
						<Input value="{/ID}" id="evalId" visible="{SB_APP_SETTING>/ID_VISIBLE}"
							enabled="{SB_APP_SETTING>/ID_VISIBLE}" change="validateEvalId">
							<layoutData>
								<l:GridData span="L5 M5" />
							</layoutData>
						</Input>
						<Label text="{i18n>EVALUATION_TITLE}" required="true">
						</Label>
						<Input value="{/TITLE}" id="evalTitle" change="validateEvalTitle">
							<layoutData>
								<l:GridData span="L5 M5" />
							</layoutData>
						</Input>
						<Label text=""></Label>
						<Link
							text="{path:'/NO_OF_ADDITIONAL_LANGUAGES',formatter:'.formatLangCount'}"
							press="addAdditionalLanguageDialog">
							<layoutData>
								<l:GridData span="L2 M2" />
							</layoutData>
						</Link>


						<Label text="{i18n>DESCRIPTION}">
						</Label>
						<Input value="{/DESCRIPTION}" id="evalDescription">
							<layoutData>
								<l:GridData span="L5 M5" />
							</layoutData>
						</Input>
						<Label text="{i18n>TAGS}" />
						<Input id="kpiTag" type="Text" value="{/TAG}">
							<layoutData>
								<l:GridData span="L5 M5" />
							</layoutData>
						</Input>
						<Label text="{i18n>OWNER_NAME}">
						</Label>
						<Input value="{/OWNER_NAME}">
							<layoutData>
								<l:GridData span="L5 M5" />
							</layoutData>
						</Input>
						<Label text="{i18n>OWNER_ID_EMAIL}">
						</Label>
						<Input value="{/OWNER_ID}">
							<layoutData>
								<layout:GridData span="L2 M2" />
							</layoutData>
						</Input>
						<Input value="{/OWNER_E_MAIL}" type="Email" id="evalOwnerEmail"
							change="validateEmailAddress">
							<layoutData>
								<layout:GridData span="L3 M3" />
							</layoutData>
						</Input>
						<Label text="{i18n>PROPERTY_NAME_VALUE}" />
						<VBox id="propertyNameValueBoxHeader" class="parameterList"
							noDataText=" ">
							<layoutData>
								<l:GridData span="L8 M8" />
							</layoutData>
							<l:Grid defaultSpan="L12 M12 S12" class="propertyEntryGrid">
								<l:content>
									<Input id="propertyName" type="Text" placeholder="{i18n>NAME}">
										<layoutData>
											<l:GridData span="L4 M4" />
										</layoutData>
									</Input>
									<Input id="propertyValue" type="Text" placeholder="{i18n>VALUE}">
										<layoutData>
											<l:GridData span="L4 M4" />
										</layoutData>
									</Input>
									<Button id="addPropertyButton" icon="sap-icon://add"
										press="addNewProperty">
										<layoutData>
											<l:GridData span="L2 M2" />
										</layoutData>
									</Button>
								</l:content>
							</l:Grid>
						</VBox>
						<Label />
						<VBox defaultSpan="L12 M12 S12" id="propertyNameValueBox"
							class="parameterList" noDataText=" ">
							<layoutData>
								<l:GridData span="L8 M8" />
							</layoutData>
						</VBox>


						<core:Title text="{i18n>DATA_SOURCE}" />

						<!-- HANA Views -->
						<Label text="{i18n>HANA_VIEW}" visible="{path:'/VIEW_MODE', formatter:'.isHANAMode'}" />
						<Input id="viewInput" placeholder="{i18n>SELECT_VIEW}"
							showValueHelp="true" value="{/VIEW_NAME}" valueHelpRequest="handleHanaViewValueHelp"
							change="hanaViewChange" visible="{path:'/VIEW_MODE', formatter:'.isHANAMode'}">
							<layoutData>
								<l:GridData span="L5 M5" />
							</layoutData>
						</Input>

						<!-- CDS Views -->
						<Label text="{i18n>CDS_VIEW}" visible="{path:'/VIEW_MODE', formatter:'.isCDSMode'}" />
						<Input id="viewInputCDS" placeholder="{i18n>SELECT_CDS_VIEW}"
							showValueHelp="true" value="{/VIEW_NAME}" valueHelpRequest="handleCDSViewValueHelp"
							change="hanaViewChange" visible="{path:'/VIEW_MODE', formatter:'.isCDSMode'}">
							<layoutData>
								<l:GridData span="L5 M5" />
							</layoutData>
						</Input>

						<Label text="{i18n>ODATA_SERVICE}" required="true" />
						<Input id="odataServiceInput" type="Text" value="{/ODATA_URL}"
							showValueHelp="true" valueHelpRequest="handleOdataServiceValueHelp"
							change="oDataUrlChange" visible="{path:'/VIEW_MODE', formatter:'.isHANAMode'}">
							<layoutData>
								<l:GridData span="L5 M5" />
							</layoutData>
						</Input>
						<!-- CDS -->
						<Input id="odataServiceInputCDS" type="Text" value="{/ODATA_URL}"
							showValueHelp="true" valueHelpRequest="handleOdataServiceValueHelpCDS"
							change="oDataUrlChange" visible="{path:'/VIEW_MODE', formatter:'.isCDSMode'}">
							<layoutData>
								<l:GridData span="L5 M5" />
							</layoutData>
						</Input>

						<Label text="{i18n>ENTITY_SET}" required="true" />
						<Input id="entitySetInput" type="Text" showValueHelp="true"
							valueHelpRequest="handleEntitySetValueHelp" value="{/ODATA_ENTITYSET}"
							change="entitySetChange">
							<layoutData>
								<l:GridData span="L5 M5" />
							</layoutData>
						</Input>

						<Label text="{i18n>Value Measure}" required="true" />
						<Input id="valueMeasureInput" type="Text" showValueHelp="true"
							valueHelpRequest="handleMeasureValueHelp" value="{/COLUMN_NAME}"
							change="measureChange">
							<layoutData>
								<l:GridData span="L5 M5" />
							</layoutData>
						</Input>

						<Label text="{i18n>SEMANTIC_OBJECT_ACTION}" />
						<Input id="semanticObject" type="Text" value="{/SEMANTIC_OBJECT}"
							change="validateSemantic">
							<layoutData>
								<l:GridData span="L2 M2" />
							</layoutData>
						</Input>
						<Input id="action" type="Text" value="{/ACTION}" change="validateSemantic">
							<layoutData>
								<l:GridData span="L3 M3" />
							</layoutData>
						</Input>
						<Label text="" />

						<Link id="additionalInfo" text="{i18n>ADDITIONAL_INFO_FROM_KPI}"
							visible="false" tooltip="{i18n>SHOWS_ADDITIONAL_INFO}" press="additionalInformationForKpi">
						</Link>

						<Label text="{i18n>SCALING_FACTOR}" />

						<Select id="scaleFactorSelect" items="" change="scaleFactorChange" selectedKey="{/SCALING}">
							<layoutData>
								<l:GridData span="L5 M5" />
							</layoutData>
							<items>
								<core:Item text="{i18n>AUTO}" key="0" />
								<core:Item text="{i18n>PERCENT}" key="-2" />
							</items>
						</Select>
						<Label text="{i18n>DECIMAL_PRECISION}" />
						<Select id="decimalPrecisionSelect" items="" change="decimalPrecisionChange"
							selectedKey="{/DECIMAL_PRECISION}">
							<layoutData>
								<l:GridData span="L5 M5" />
							</layoutData>
							<items>
								<core:Item text="{i18n>AUTO}" key="-1" />
								<core:Item text="{i18n>NO_DECIMAL}" key="0" />
								<core:Item text="{path:'i18n>1',formatter:'.convert'}"
									key="1" />
								<core:Item text="{path:'i18n>2',formatter:'.convert'}"
									key="2" />
								<core:Item text="{path:'i18n>3',formatter:'.convert'}"
									key="3" />
							</items>
						</Select>
						<Button icon="sap-icon://message-information" type="Transparent"
							press="openDecimalInfo" width="12%">
							<layoutData>
								<l:GridData span="L3 M3 " vAlign="Middle" />
							</layoutData>
						</Button>
						<Label id="additionalMeasureLabel" text="{i18n>SELECT_ADDITIONAL_MEASURES}"
							visible="false"></Label>
						<MultiInput id="additionalMeasures" type="Text"
							enabled="true" valueHelpRequest="openAdditionalMeasures"
							valueHelpOnly="true" tokenChange="multiMeasureTokenChange"
							change="multiMeasureChange" showValueHelp="true" visible="false">
							<layoutData>
								<l:GridData span="L5 M5 S5" />
							</layoutData>
						</MultiInput>
						<Label id="selectedLabel" text="{i18n>SELECTED_MEASURES}"
							visible="false"></Label>
						<Text id="selectedadditionalMeasures" visible="false">
							<layoutData>
								<l:GridData span="L5 M5 S5" />
							</layoutData>
						</Text>
						<Label></Label>


						<core:Title text="{i18n>INPUT_PARAMETERS_FILTERS}" />
					</form:content>
				</form:SimpleForm>
				<Panel>
					<l:Grid defaultSpan="L12 M12 S12" defaultIndent="L2 M2"
						visible="false" id="noInputParameterGrid">
						<l:content>
							<Label id="noparameterlabel">
								<layoutData>
									<l:GridData span="L2 M2" />
								</layoutData>
							</Label>
							<Label id="noparameterrequired" text="{i18n>NO_PARAM_REQUIRED}"
								design="Bold" width="100%" textAlign="Center">
								<layoutData>
									<l:GridData span="L6 M6" indent="L0 M0" />
								</layoutData>
							</Label>
						</l:content>
					</l:Grid>

					<l:Grid defaultSpan="L12 M12 S12" defaultIndent="L2 M2"
						id="inputParameterDataGrid">
						<l:content>
							<Label id="inputParameterLabel" text="{i18n>INPUT_PARAMETERS}"
								design="Bold" required="true">
								<layoutData>
									<l:GridData span="L6 M6" />
								</layoutData>
							</Label>
							<Label id="inputParameterSourceInfo" text="{i18n>REQUIRED_PARAM_LIST}">
								<layoutData>
									<l:GridData span="L9 M9" />
								</layoutData>
							</Label>
							<VBox id="inputParameterLayoutHeaders">
								<layoutData>
									<l:GridData span="L11 M11" indent="L1 M1" />
								</layoutData>
								<items>
									<l:Grid defaultSpan="L12 M12" vSpacing="0">
										<l:content>
											<Label text="{i18n>DIMENSION}" design="Bold" width="100%"
												textAlign="End">
												<layoutData>
													<l:GridData span="L3 M3" />
												</layoutData>
											</Label>
											<Label text="{i18n>OPERATOR}" design="Bold">
												<layoutData>
													<l:GridData span="L3 M3" />
												</layoutData>
											</Label>
											<Label text="{i18n>VALUES}" design="Bold">
												<layoutData>
													<l:GridData span="L3 M3" />
												</layoutData>
											</Label>
										</l:content>
									</l:Grid>
								</items>
							</VBox>
							<VBox id="inputParameterBaseLayout">
								<layoutData>
									<l:GridData span="L11 M11" indent="L1 M1" />
								</layoutData>
							</VBox>
						</l:content>
					</l:Grid>
					<l:Grid defaultSpan="L12 M12 S12" defaultIndent="L2 M2"
						id="mandatoryFiltersDataGrid">
						<l:content>
							<Label text="{i18n>MANDATORY_FILTERS}" design="Bold"
								id="mandatoryFiltersLabel" required="true">
								<layoutData>
									<l:GridData span="L6 M6" />
								</layoutData>
							</Label>
							<Label text="{i18n>REQUIRED_FILTERS_DESCRIPTION}" id="mandatoryFiltersDescription"
								visible="false">
								<layoutData>
									<l:GridData span="L9 M9" />
								</layoutData>
							</Label>

							<VBox id="mandatoryFilterHeader" >
								<layoutData>
									<l:GridData span="L11 M11" indent="L1 M1" />
								</layoutData>
								<items>
									<l:Grid defaultSpan="L12 M12" vSpacing="0">
										<l:content>
											<Label text="{i18n>DIMENSION}" design="Bold" width="100%"
												textAlign="End">
												<layoutData>
													<l:GridData span="L3 M3" />
												</layoutData>
											</Label>
											<Label text="{i18n>OPERATOR}" design="Bold">
												<layoutData>
													<l:GridData span="L3 M3" />
												</layoutData>
											</Label>
											<Label text="{i18n>VALUES}" design="Bold">
												<layoutData>
													<l:GridData span="L3 M3" />
												</layoutData>
											</Label>
										</l:content>
									</l:Grid>
								</items>
							</VBox>
							<VBox id="mandatoryFilterBaseLayout">
								<layoutData>
									<l:GridData span="L11 M11" indent="L1 M1" />
								</layoutData>
							</VBox>
						</l:content>
					</l:Grid>

					<l:Grid defaultSpan="L12 M12 S12" defaultIndent="L2 M2"
						id="optionalDimensionGrid">
						<l:content>
							<Link text="{i18n>OPTIONAL_DIMENTIONAL_FILTERS}" design="Bold"
								press="openDimensionDialog">
								<layoutData>
									<l:GridData span="L6 M6" />
								</layoutData>
							</Link>

							<VBox id="dimensionLayoutHeaders">
								<layoutData>
									<l:GridData span="L11 M11" indent="L1 M1" />
								</layoutData>
								<items>
									<l:Grid defaultSpan="L12 M12" class="dimensionHeaders"
										vSpacing="0">
										<l:content>
											<Label text="{i18n>DIMENSION}" design="Bold" width="100%"
												textAlign="End">
												<layoutData>
													<l:GridData span="L3 M3" />
												</layoutData>
											</Label>
											<Label text="{i18n>OPERATOR}" design="Bold">
												<layoutData>
													<l:GridData span="L3 M3" />
												</layoutData>
											</Label>
											<Label text="{i18n>VALUES}" design="Bold">
												<layoutData>
													<l:GridData span="L3 M3" />
												</layoutData>
											</Label>
										</l:content>
									</l:Grid>
								</items>
							</VBox>
							<VBox id="baseDimensionLayout">
								<layoutData>
									<l:GridData span="L11 M11" indent="L1 M1" />
								</layoutData>
							</VBox>
						</l:content>
					</l:Grid>
				</Panel>
				<Panel class="evaluationPanel" visible="false" id="targetThresholdPanel">
					<mvc:XMLView id="targetThresholdView"
						viewName="sap.suite.ui.smartbusiness.designtime.evaluation.view.createEvalTargetThresholdTrendInput" />
				</Panel>
			</l:VerticalLayout>
		</content>
	</Page>
</core:View>