<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:form="sap.ui.layout.form">
	<Dialog title="Micro Chart Configuration" class='dialog' id='multipleMeasureDialog'
		horizontalScrolling='false' verticalScrolling='true'>
		<content>
			<List
				visible="{path:'SB_DDACONFIG>VISUALIZATION_TYPE',formatter:'.showConfigureTileDimension'}">
				<items>
					<GroupHeaderListItem title="{SB_DDACONFIG>TITLE} {SB_DDACONFIG>SUBTITLE}"></GroupHeaderListItem>
					<CustomListItem>
					</CustomListItem>
					<CustomListItem>
						<content>
							<VBox>
								<items>
									<HBox>
										<items>
											<Input editable="false" value="{i18n>DIMENSION}" />
											<Select items="{SB_DDACONFIG>ALL_DIMENSIONS}"
												selectedKey="{SB_DDACONFIG>DIMENSION}">
												<core:Item key="{path:'SB_DDACONFIG>'}" text="{path:'SB_DDACONFIG>'}" />
											</Select>

										</items>
									</HBox>
									<HBox
										visible="{path:'SB_DDACONFIG>VISUALIZATION_TYPE',formatter:'.showConfigureTileSortOrder'}">
										<items>
											<Input editable="false" value="{i18n>SORT_ORDER}" />
											<Select selectedKey="{SB_DDACONFIG>SORT_ORDER}">
												<items>
													<core:Item  key="MA"
														text="{i18n>MEASURE_ASC}" />
													<core:Item  key="MD"
														text="{i18n>MEASURE_DESC}" />
													<core:Item  key="DA"
														text="{i18n>DIMENSION_ASC}" />
													<core:Item  key="DD"
														text="{i18n>DIMENSION_DESC}" />

												</items>
											</Select>
										</items>
									</HBox>
									<HBox
										visible="{path:'SB_DDACONFIG>VISUALIZATION_TYPE',formatter:'.showConfigureTileSortOrder'}">
										<items>
											<Input editable="false" value="{i18n>DIMENSION_COLOR}" />
											<Select selectedKey="{SB_DDACONFIG>DIMENSION_COLOR}">
												<items>
													<core:Item  key="Neutral"
														text="{i18n>NEUTRAL}" />
													<core:Item  key="Critical"
														text="{i18n>CRITICAL}" />
													<core:Item  key="Error"
														text="{i18n>WARNING}" />
													<core:Item  key="Good"
														text="{i18n>GOOD}" />

												</items>
											</Select>
										</items>
									</HBox>
								</items>
							</VBox>
						</content>
					</CustomListItem>
				</items>
			</List>
			<List
				visible="{path: 'SB_DDACONFIG>VISUALIZATION_TYPE',formatter:'.showConfigureTileMeasure'}">
				<items>
					<GroupHeaderListItem title="{SB_DDACONFIG>TITLE} {SB_DDACONFIG>SUBTITLE}"></GroupHeaderListItem>
					<CustomListItem>
					</CustomListItem>
					<CustomListItem>
						<content>
							<VBox class="multiMeasureContent">
								<items>
									<HBox class="makeSpacedAround">
										<items>
											<Label required='true' class="putMarginTop" text="{i18n>MEASURE_1}"/>
											<Select  class="measureSelectMargin" items="{SB_DDACONFIG>ALL_MEASURES}"
												selectedKey="{SB_DDACONFIG>MEASURE1}">
												<core:Item key="{path:'SB_DDACONFIG>'}" text="{path:'SB_DDACONFIG>'}" />
											</Select>
											<Select class="measureColorMargin" selectedKey="{SB_DDACONFIG>COLOR1}">
												<items>
													<core:Item key="Good" text="{i18n>GOOD}" />
													<core:Item key="Critical" text="{i18n>WARNING}" />
													<core:Item key="Error" text="{i18n>CRITICAL}"/>
													<core:Item key="Neutral" text="{i18n>NEUTRAL}"/>
												</items>
											</Select>
										</items>
									</HBox>
									<HBox class="makeSpacedAround">
										<items>
											<Label required='true' class="putMarginTop" text="{i18n>MEASURE_2}"/>
											<Select class="measureSelectMargin" items="{SB_DDACONFIG>ALL_MEASURES}"
												selectedKey="{SB_DDACONFIG>MEASURE2}">
												<core:Item key="{path:'SB_DDACONFIG>'}" text="{path:'SB_DDACONFIG>'}" />
											</Select>
											<Select class="measureColorMargin" selectedKey="{SB_DDACONFIG>COLOR2}">
												<items>
													<core:Item key="Good" text="{i18n>GOOD}" />
													<core:Item key="Critical" text="{i18n>WARNING}" />
													<core:Item key="Error" text="{i18n>CRITICAL}"/>
													<core:Item key="Neutral" text="{i18n>NEUTRAL}"/>
												</items>
											</Select>
										</items>
									</HBox>
									<HBox class="makeSpacedAround">
										<items>
											<Label class="putMarginTop putMarginLeft" text="{i18n>MEASURE_3}" />
											<Select   class="measureSelectMargin" id="measuresForTile3"  items="{SB_DDACONFIG>ALL_MEASURES}"
												selectedKey="{SB_DDACONFIG>MEASURE3}">
												<core:Item key="{path:'SB_DDACONFIG>'}" text="{path:'SB_DDACONFIG>'}" />
											</Select>
											<Select class="measureColorMargin" selectedKey="{SB_DDACONFIG>COLOR3}">
												<items>
													<core:Item key="Good" text="{i18n>GOOD}" />
													<core:Item key="Critical" text="{i18n>WARNING}" />
													<core:Item key="Error" text="{i18n>CRITICAL}"/>
													<core:Item key="Neutral" text="{i18n>NEUTRAL}"/>
												</items>
											</Select>
										</items>
									</HBox>
								</items>
							</VBox>

						</content>
					</CustomListItem>
				</items>
			</List>
			<List visible="{path: 'SB_DDACONFIG>VISUALIZATION_TYPE',formatter:'.showHarveyConfigurator'}">
				<items>
					<GroupHeaderListItem title="{SB_DDACONFIG>TITLE} {SB_DDACONFIG>SUBTITLE}"></GroupHeaderListItem>
					<CustomListItem>
					</CustomListItem>
					<CustomListItem>
                    <form:SimpleForm editable="true" minWidth="1024"
                           layout="ResponsiveGridLayout" labelSpanL="4" labelSpanM="4"
                           emptySpanL="0" emptySpanM="0" columnsL="2" columnsM="2"
                           id="tileConfigForm">
	                      <form:content>
                           	        <Label design="Bold" text="{i18n>TYPE}" />
                                    <VBox>
                                        <layoutData>
                                               <l:GridData span="L8 M8" />
                                        </layoutData>                                                
	                                     <items>
	                                      <RadioButton  text='{i18n>KPI_MEASURE_AS_FRACTION_VALUE_MEASURE}'
	                                             groupName='harveyballConfigurationType'
	                                             selected="{SB_DDACONFIG>IS_HARVEY_FRACTION_KPIMEASURE}">
	                                                         <customData>
	                                                               <core:CustomData key="type" value="harveyFractionMeasure" />
	                                                         </customData>		                                                       
	                                      </RadioButton>
	                                      <RadioButton  text='{i18n>KPI_MEASURE_AS_TOTAL_VALUE_MEASURE}'
	                                             groupName='harveyballConfigurationType'
	                                             select="onKpiMeasureAsHarveyTotalMeasure" selected="{SB_DDACONFIG>IS_HARVEYMEASURE_KPIMEASURE}">
	                                                         <customData>
	                                                               <core:CustomData key="type" value="harveyTotalMeasure" />
	                                                         </customData>		                                                       
	                                      </RadioButton>
	                                     </items>
                                    </VBox>
                               		<Label design="Bold" text="{i18n>TOTAL_VALUE_MEASURE}" />
		                              <Select items="{SB_DDACONFIG>ALL_MEASURES}"
		                                  selectedItem="{SB_DDACONFIG>HARVEY_TOTAL_MEASURE}" change=""
		                                  selectedKey="{SB_DDACONFIG>HARVEY_TOTAL_MEASURE}"
		                                  visible="{parts:[{path:'SB_DDACONFIG>VISUALIZATION_TYPE'},{path:'SB_DDACONFIG>IS_HARVEY_FRACTION_KPIMEASURE'}],
		                                  formatter:'.harveyTotalMeasureVisibility'}">
                                 	 	<layoutData>
     	                                	  <l:GridData span="L8 M8" />
         		                     	</layoutData>
                 		               	<items>
                                 	    	  <core:Item key="{path:'SB_DDACONFIG>'}" text="{path:'SB_DDACONFIG>'}" />
                             		  	</items>
                     				</Select>
                     				<Label design="Bold" text="{i18n>HARVEY_FILTER_DIMENSION}" />
		                           <Select visible="{parts:[{path:'SB_DDACONFIG>VISUALIZATION_TYPE'},{path:'SB_DDACONFIG>IS_HARVEYMEASURE_KPIMEASURE'}],
		                                     formatter:'.harveyFilterVisibility'}" items="{SB_DDACONFIG>FILTERABLE_DIMENSIONS}" selectedKey="{SB_DDACONFIG>HARVEY_FILTERS/0/NAME}">
		   		                                   <layoutData>
		            	                              <l:GridData span="L8 M8" />
		                		                   </layoutData>
		                       		               <items>
		                                       	      <core:Item key="{path:'SB_DDACONFIG>'}" text="{path:'SB_DDACONFIG>'}" />
		                                   		   </items>
		                           </Select>
                           			<Label design="Bold" text="{SB_DDACONFIG>HARVEY_FILTERS/0/LABEL}" />
                                       <l:Grid defaultSpan="L12 M12" hSpacing="0rem" vSpacing="0Rem" defaultIndent="L0 M0" visible="{parts:[{path:'SB_DDACONFIG>VISUALIZATION_TYPE'},{path:'SB_DDACONFIG>IS_HARVEYMEASURE_KPIMEASURE'}],
                               		 formatter:'.harveyFilterVisibility'}">
                                              <l:content>
	                              					<Select selectedKey="{SB_DDACONFIG>HARVEY_FILTERS/0/OPERATOR}">
	 		                                 	  		<layoutData>
	         	                                 			 <l:GridData span="L5 M5" />
	             		                     		 	</layoutData>					      		                              	
	                                                	<items>
	                                                		<core:Item text="{i18n>EQUAL_TO}" key="EQ"/>
	                                                		<core:Item text="{i18n>GREATER_THAN}" key="GT"/>
	                                                		<core:Item text="{i18n>LESS_THAN}" key="LT"/>
	                                                		<core:Item text="{i18n>NOT_EQUAL_TO}" key="NE"/>
	                                                		<core:Item text="{i18n>BETWEEN}" key="BT"/>
	                                                	</items>
	                              					</Select>
					                              	<Input value="{SB_DDACONFIG>HARVEY_FILTERS/0/VALUE_1}" showValueHelp="true" valueHelpRequest=".openFilterValueHelp">
					 		                                   <layoutData>
					         	                                  <l:GridData span="L7 M7" />
					             		                       </layoutData>					      		                              			
					                              				<customData>
					                                                      <core:CustomData key="valueType" value="value1" />
					                                            </customData>
					                              	</Input>
					                              	<Text text="{i18n>TO}" visible="{path:'SB_DDACONFIG>HARVEY_FILTERS/0/OPERATOR', formatter:'.betweenOperatorLabelVisibility'}">
					 		                                   <layoutData>
					         	                                  <l:GridData span="L8 M8" />
					             		                       </layoutData>					      		                              	
					                              	</Text>
					                              	<Input value="{SB_DDACONFIG>HARVEY_FILTERS/0/VALUE_2}" showValueHelp="true" valueHelpRequest=".openFilterValueHelp"
					                              		visible="{path:'SB_DDACONFIG>HARVEY_FILTERS/0/OPERATOR', formatter:'.betweenOperatorLabelVisibility'}">
					 		                                   <layoutData>
					         	                                  <l:GridData span="L8 M8" />
					             		                       </layoutData>					      		                              			
					                              				<customData>
					                                                      <core:CustomData key="valueType" value="value12" />
					                                            </customData>
					                              	</Input>							      		                              						      		                              	
                                              </l:content>
                                       </l:Grid>	                      
	                      </form:content>
                     </form:SimpleForm>				
					</CustomListItem>
				</items>
			</List>			
		</content>
		<beginButton>
			<Button text="{i18n>OK}" press="onMiniChartConfigureOk" />
		</beginButton>
		<endButton>
			<Button text="{i18n>CANCEL}" press="onAddTileCancel" />
		</endButton>
	</Dialog>
</core:FragmentDefinition>
