<core:View controllerName="sap.suite.ui.smartbusiness.drilldown.view.Drilldown"
	xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc"
	xmlns:layout="sap.ui.layout" xmlns:charts="sap.ca.ui.charts" xmlns:me="sap.me"
	xmlns:suite="sap.suite.ui.commons" xmlns:dda="sap.suite.ui.smartbusiness.lib"
	xmlns:viz="sap.viz.ui5.controls" xmlns:l="sap.ui.layout" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page id="smartbusiness_drilldown_page" enableScrolling="false"
		class="smartbusinessDrilldownPage">
		<content height="100%">
			<l:FixFlex class="ofixFlexVertical">
				<l:fixContent>
					<dda:Filter id="facetFilter" visible="false" class="facetFilter"></dda:Filter>
		
					<ObjectHeader id="header-ribbon" class="headermargin backgroundWhite" showTitleSelector="false" titleSelectorPress="displayMiniCharts"></ObjectHeader>
		
					<VBox id="headerContainerVBox" visible="false">
						<suite:HeaderContainer id="header-container"
							class="tilesHeaderContainer backgroundWhite"></suite:HeaderContainer>
					</VBox>
			
				</l:fixContent>
				
				<l:flexContent>
					<l:FixFlex id="vizVbox" class="vizVbox" fixContentSize="0px" visible="true">
						<l:fixContent>
						</l:fixContent>
						<l:flexContent>
							<suite:ChartContainer id="vizChartContainer" class="vizChartContainer"
								showFullScreen="true" showPersonalization="false"
								autoAdjustHeight="true"  showLegend="false" >
								<suite:dimensionSelectors>
									<Select id="vizViewSelector" items="{VIEW_SWITCH>/}" change="onVizViewChange" >
										<items>
											<core:Item key="{VIEW_SWITCH>ID}" text="{VIEW_SWITCH>TITLE}" />
										</items>
									</Select>
								</suite:dimensionSelectors>
								<suite:content>									
								</suite:content>
							</suite:ChartContainer>
						</l:flexContent>
					</l:FixFlex>
				</l:flexContent>
			</l:FixFlex>
		</content>
		<footer>
			<Bar id="footer_bar">
				<contentRight>
				</contentRight>
			</Bar>
		</footer>
	</Page>
</core:View>
