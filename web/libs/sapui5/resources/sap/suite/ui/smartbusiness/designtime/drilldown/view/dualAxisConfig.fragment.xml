<Dialog xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns:f="sap.ui.layout.form" xmlns="sap.m" id='dualAxisConfig'
	title="{i18n>DUAL_AXIS_CONFIGURATION}" class="dualAxisConfig"
	contentHeight="30%" contentWidth="30%"
	horizontalScrolling='false' verticalScrolling='true'
	resourceBundleName="myBundle" resourceBundleAlias="i18n">

	<content>
		<f:Form id="dualAxisConfigForm" editable="true" class="dualAxisConfigForm">
			<f:layout>
				<f:ResponsiveGridLayout />
			</f:layout>
			<f:formContainers>
				<f:FormContainer>
					<f:formElements>
						<f:FormElement>
							<f:fields>
								<Label text="{i18n>STACKING}" design="Bold" class="formLabels"
									required="true" />
							</f:fields>
						</f:FormElement>
						<f:FormElement>
							<f:fields>
								<Text text="{i18n>STACKING_INFO}" />
							</f:fields>
						</f:FormElement>
						<f:FormElement>
							<f:fields>
								<HBox class="stacklayout">
									<List items="{path: 'DUAL_AXIS1>/DATA'}">
									    <headerToolbar>
									      <Toolbar>
									        <Text text="{i18n>STACK1}"/>
									        <ToolbarSpacer/>
									        <Text id="stack1list"/>
									      </Toolbar>
									    </headerToolbar>
										<items>
											<CustomListItem type="Active" press="stack1removed">
												<HBox class="stack1Listlayout">
													<Text text="{DUAL_AXIS1>name}" />
													<core:Icon src="sap-icon://navigation-right-arrow" />
												</HBox>
											 </CustomListItem>
										</items>
									</List>
									<List items="{path: 'DUAL_AXIS2>/DATA'}">
									    <headerToolbar>
									      <Toolbar>
									        <Text text="{i18n>STACK2}"/>
									        <ToolbarSpacer/>
									        <Text id="stack2list"/>
									      </Toolbar>
									    </headerToolbar>
										<items>
											<CustomListItem type="Active" press="stack2removed">
												<HBox class="stack2Listlayout">
													<core:Icon src="sap-icon://navigation-left-arrow" />
													<Text text="{DUAL_AXIS2>name}" />
												</HBox>
											 </CustomListItem>
										</items>
									</List>
								</HBox>
							</f:fields>
						</f:FormElement>
					</f:formElements>
				</f:FormContainer>
			</f:formContainers>
		</f:Form>
	</content>
	<beginButton>
		<Button text="{i18n>OK}" press="onDualAxisDialogOk" />
	</beginButton>
	<endButton>
		<Button text="{i18n>CANCEL}" press="onDualAxisDialogCancel" />
	</endButton>
</Dialog>
