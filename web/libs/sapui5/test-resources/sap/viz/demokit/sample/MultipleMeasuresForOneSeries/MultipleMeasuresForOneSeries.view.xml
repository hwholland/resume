<mvc:View controllerName="sap.viz.sample.MultipleMeasuresForOneSeries.MultipleMeasuresForOneSeries" xmlns="sap.m"
    xmlns:viz="sap.viz.ui5.controls" xmlns:layout="sap.ui.layout"
    xmlns:mvc="sap.ui.core.mvc" xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds"
    xmlns:core="sap.ui.core" xmlns:viz.data="sap.viz.ui5.data" height="100%">
    <layout:FixFlex id='chartFixFlex' minFlexSize="250">
        <!--Below is the setting panel -->
        <layout:fixContent>
            <Panel id='settingsPanel' class="panelStyle" expandable="true" expanded="true" headerText="Settings" width="auto">
                <content>
                    <HBox class='settingsHBox'>
                    <VBox class='settingsBox'>
                        <Label text="{/chartType/name}" design="Bold" class='settingsLabel'></Label>
                        <Select id='chartTypeSelect' class='settingsSelect' selectedKey='{/chartType/defaultSelected}' maxWidth="150px" change='onChartTypeChanged' 
                            items="{path: '/chartType/values'}">
                            <items>
                                <core:Item text="{name}" key="{key}" />
                            </items>
                        </Select>
                    </VBox>
                    </HBox>
                </content>
            </Panel>
        </layout:fixContent>
        <layout:flexContent>
            <viz:Popover id="idPopOver"></viz:Popover>
            <viz:VizFrame id="idVizFrame" uiConfig="{applicationSet:'fiori'}"
                height='100%' width="100%" vizType='vertical_bullet'>
                <viz:dataset>
                    <viz.data:FlattenedDataset data="{/milk}">
                        <viz.data:dimensions>
                            <viz.data:DimensionDefinition name="Year"
                                value="{Year}" />
                        </viz.data:dimensions>
                        <viz.data:measures>
                            <viz.data:MeasureDefinition name="Revenue"
                                value="{Revenue}" />
                            <viz.data:MeasureDefinition name="Revenue2"
                                value="{Revenue2}" />
                            <viz.data:MeasureDefinition name="Target"
                                value="{Target}" />
                        </viz.data:measures>
                    </viz.data:FlattenedDataset>
                </viz:dataset>

                <viz:feeds>
                    <viz.feeds:FeedItem uid="actualValues" type="Measure"
                        values="Revenue" />
                    <viz.feeds:FeedItem uid="targetValues" type="Measure"
                        values="Target" />
                    <viz.feeds:FeedItem uid="categoryAxis" type="Dimension"
                        values="Year" />
                </viz:feeds>
            </viz:VizFrame>
        </layout:flexContent>
    </layout:FixFlex>
</mvc:View>
