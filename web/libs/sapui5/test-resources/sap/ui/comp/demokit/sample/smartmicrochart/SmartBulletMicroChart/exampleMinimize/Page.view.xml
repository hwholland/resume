<core:View xmlns:core="sap.ui.core" xmlns="sap.ui.comp.smartmicrochart" xmlns:l="sap.ui.layout" xmlns:m="sap.m" controllerName="sap.ui.comp.sample.smartmicrochart.SmartBulletMicroChart.exampleMinimize.Page">
	<m:Page id="page" title="SmartBulletMicroChart criticality calculation minimize direction" enableScrolling="false">
		<m:Panel>
			<l:VerticalLayout>
				<l:content>
					<m:Label text="Positive" />
					<SmartBulletMicroChart id="minimizeSmartChart" entitySet="Products" />

					<m:Label text="Critical" />
					<SmartBulletMicroChart id="minimizeSmartChartWarning" entitySet="Products" />

					<m:Label text="Negative" />
					<SmartBulletMicroChart id="minimizeSmartChartError" entitySet="Products" />
				</l:content>
			</l:VerticalLayout>
		</m:Panel>
	</m:Page>
</core:View>