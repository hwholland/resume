<core:View xmlns:core="sap.ui.core" xmlns="sap.ui.comp.smartmicrochart" xmlns:m="sap.m" controllerName="sap.ui.comp.sample.smartmicrochart.SmartMicroChart.Page">
	<m:Page id="page" title="SmartMicroChart" enableScrolling="false">
		<m:Panel>
			<m:HBox>
				<m:VBox class="sapUiContentPadding">
					<m:FlexBox width="16rem" height="8rem" alignItems="Center" justifyContent="SpaceBetween">
						<SmartMicroChart id="smartChartBullet" entitySet="Products" enableAutoBinding="true" chartBindingPath="/Products('PC')" isResponsive="true" />
					</m:FlexBox>
					<m:Label text="SmartMicroChart in case of 'ChartType/Bullet'" />
					<m:Label text="Title association" design="Bold" class="sapUiSmallMarginTop" />
					<m:Label id="titleLabelBullet" />
					<m:Label text="Description association" design="Bold" class="sapUiSmallMarginTop" />
					<m:Label id="descriptionLabelBullet" />
					<m:Label text="Unit of Measure association" design="Bold" class="sapUiSmallMarginTop" />
					<m:Label id="unitLabelBullet" />
				</m:VBox>
				<m:VBox class="sapUiContentPadding">
					<m:FlexBox width="16rem" height="8rem" alignItems="Center" justifyContent="SpaceBetween">
						<SmartMicroChart id="smartChartArea" entitySet="Series" isResponsive="true" />
					</m:FlexBox>
					<m:Label text="SmartMicroChart in case of 'ChartType/Area'" />
					<m:Label text="Title association" design="Bold" class="sapUiSmallMarginTop" />
					<m:Label id="titleLabelArea" />
					<m:Label text="Description association" design="Bold" class="sapUiSmallMarginTop" />
					<m:Label id="descriptionLabelArea" />
					<m:Label text="Unit of Measure association" design="Bold" class="sapUiSmallMarginTop" />
					<m:Label id="unitLabelArea" />
				</m:VBox>
			</m:HBox>
		</m:Panel>
	</m:Page>
</core:View>