<mvc:View
	height="100%"
	controllerName="sap.ui.comp.sample.VariantManagement.example1.VariantManagement"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:m="sap.m"
	xmlns="sap.ui.comp.variants">
	<l:VerticalLayout>
		<m:Label text="Variants"/>
		<VariantManagement select="onSelect" save="onSave" enabled="true" manage="onManage" showExecuteOnSelection="true" showShare="true">
			<variantItems>
				<VariantItem text="Accounts by Name" key="ABN" global="true" readOnly="true" lifecyclePackage="/UIF/LREP_HOME_CONTENT" accessOptions="R"/>
				<VariantItem text="Accounts by ID" key="ABI" global="true" readOnly="false" lifecyclePackage="/UIF/LREP_HOME_CONTENT" accessOptions="RWD"/>
				<VariantItem text="My Global Variant" key="MGV" global="true" readOnly="false" lifecyclePackage="$TMP" accessOptions="RWD"/>
				<VariantItem text="My Better Variant" key="MBV" global="false" readOnly="false" lifecyclePackage="$TMP" accessOptions="RWD"/>
			</variantItems>
		</VariantManagement>
	</l:VerticalLayout>
</mvc:View>