<core:View xmlns:core="sap.ui.core" xmlns="sap.ui.comp.smartmicrochart" xmlns:l="sap.ui.layout" xmlns:m="sap.m" controllerName="sap.ui.comp.sample.smartmicrochart.SmartBulletMicroChart.exampleDirect.Page">
	<m:Page id="page" title="SmartBulletMicroChart criticality directly set in OData annotation" enableScrolling="false">
			<l:VerticalLayout>
				<l:content>
					<m:Label text="Neutral" class="sapUiLargeMarginBottom" />
					<SmartBulletMicroChart id="directSmartChartNeutral" entitySet="Products" />
					<m:Label text="Unit of Measure association" design="Bold" class="sapUiLargeMarginTop" />
					<m:Label id="unitOfMeasure" class="sapUiLargeMarginBottom" />

					<m:Label text="Positive" class="sapUiLargeMarginBottom" />
					<SmartBulletMicroChart id="directSmartChartPositive" entitySet="Products" enableAutoBinding="true" chartBindingPath="/Products('Keyboard')" />
					<m:Label text="Title association" design="Bold" class="sapUiLargeMarginTop" />
					<m:Label id="chartTitle" class="sapUiLargeMarginBottom" />

					<m:Label text="Critical" class="sapUiLargeMarginBottom" />
					<SmartBulletMicroChart id="directSmartChartCritical" entitySet="Products" />
					<m:Label text="Description association" design="Bold" class="sapUiLargeMarginTop" />
					<m:Label id="chartDescription" class="sapUiLargeMarginBottom" />

					<m:Label text="Negative" class="sapUiLargeMarginBottom" />
					<SmartBulletMicroChart id="directSmartChartNegative" entitySet="Products" />
				</l:content>
			</l:VerticalLayout>
	</m:Page>
</core:View>