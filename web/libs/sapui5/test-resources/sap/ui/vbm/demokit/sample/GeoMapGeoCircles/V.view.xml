<mvc:View
	controllerName="sap.ui.vbm.sample.GeoMapGeoCircles.C"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m"
	xmlns:vbm="sap.ui.vbm"
    height="100%"
    displayBlock="true">
    <Page
       showHeader = "false"
       enableScrolling="false">
		<vbm:GeoMap 
		    id="vbi" 
		    width="100%"
		    height="100%"
            openWindow= "onOpenDetail"
            closeWindow= "onCloseDetail">			    
			<vbm:GeoCircles
		        items="{/CirclesGeoDist}"
			    click="onClickItem" 
			    contextMenu="onContextMenuItem" >
				<vbm:GeoCircle 
				    position="{A}" 
				    tooltip="{D}" 
				    radius="{E}"
				    color="{B}"
				    colorBorder="{C}"
				    click="onClickGeoCircle" 
				    contextMenu="onContextMenuGeoCircle"/>
			</vbm:GeoCircles>
			<vbm:GeoCircles>
				<vbm:GeoCircle 
				    position="-10;0;0" 
				    tooltip="This is a GeoCircle" 
				    radius="1000000"
				    color="RGBA(128,255,128,100)"
				    colorBorder="RGBA(180,255,255,255)"
				    click="onClickGeoCircle" 
				    contextMenu="onContextMenuGeoCircle"/>
			</vbm:GeoCircles>   
		</vbm:GeoMap>
		<footer>
	      <Toolbar>
	        <ToolbarSpacer/>
	        	<Button 
			        id="ZoomButton"
					icon="sap-icon://zoom-in"
					tooltip="Zoom in to EU"
					enabled="true"
					press="onZoomIn" />
	      </Toolbar>
	    </footer>
  	</Page>
</mvc:View>