<mvc:View
	controllerName="sap.ui.vbm.sample.AnalyticMapLegend.C"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m"
	xmlns:vbm="sap.ui.vbm"
   height="100%"
   displayBlock="true">
   <Page
       showHeader = "false"
       enableScrolling="false">
		<vbm:AnalyticMap 
		    id="vbi"
		    width="100%"
		    height="100%"
		    regionClick="onRegionClick"
			regionContextMenu="onRegionContextMenu"
			regions ="{/regionProperties}">
		    <vbm:regions>
				<vbm:Region 	        
				    code="{code}" 
				    color="{color}"
				    tooltip = "{tooltip}"/>
			</vbm:regions>
			<vbm:legend>
				<vbm:Legend
				    id="legend"
				    caption ="Analytic Legend"
				    items ="{/regionProperties}">
						<vbm:LegendItem 	        
						    text="{legend}" 
						    color="{color}"
						    tooltip = "{tooltip}"/>
				</vbm:Legend>
			</vbm:legend>
		</vbm:AnalyticMap>
		<footer>
	      <Toolbar>
	        <ToolbarSpacer/>
		    <Button
		        id="changeModel1"
				text="Change EU Color"
				tooltip="Change Model used by AnalyticMap"
				enabled="true"
				press="onChangeModel1" />
		    <Button
		        id="changeModel2"
				text="Remove last Region"
				tooltip="Change Model used by AnalyticMap"
				enabled="true"
				press="onChangeModel2" />
		    <Button
		        id="toggleLegend"
				text="Remove Legend"
				tooltip="Remove Legend"
				enabled="true"
				press="onToggleLegend" />
	      </Toolbar>
	    </footer>
	</Page>
</mvc:View>