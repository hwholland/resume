<mvc:View
	controllerName="sap.ui.vbm.sample.GeoMapPies.C"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.suite.ui.commons"
  	xmlns:m="sap.m"
	xmlns:vbm="sap.ui.vbm"
   height="100%"
   displayBlock="true">
	<vbm:GeoMap 
	    id="vbi" 
	    width="100%"
	    height="100%"
        openWindow= "onOpenDetail"
        closeWindow= "onCloseDetail">		    
		<vbm:Pies>
			<vbm:Pie 
			    scale="1;1;1"
			    position="0;0;0" 
			    click="onClickItem" 
			    contextMenu="onContextMenuPie"
			    items="{/PieSeries}" >
				<vbm:PieItem
				    value="{value}"
				    tooltip="{tooltip}"/>
			</vbm:Pie>
		</vbm:Pies> 
	</vbm:GeoMap>
</mvc:View>