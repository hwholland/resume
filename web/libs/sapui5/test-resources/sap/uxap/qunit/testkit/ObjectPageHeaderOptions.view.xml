<core:View xmlns:core="sap.ui.core"
           xmlns="sap.uxap"
           xmlns:layout="sap.ui.layout"
           xmlns:m="sap.m"
           height="100%"
        >

    <ObjectPageLayout id="ObjectPageLayout" enableLazyLoading="false">
        <headerTitle>
            <ObjectPageHeader
                              objectImageURI="./test-resources/demokit/sample/Headers/Control/TimMcafeed.png"
                              objectImageShape="Circle"
                              headerDesign="Dark"
                              objectTitle="Tim McAfeedorSomethingEvenBigger"
                              isObjectIconAlwaysVisible="false"
                              isObjectSubtitleAlwaysVisible="false"
                              isObjectTitleAlwaysVisible="false"
                              objectSubtitle="Senior UI Developer with a subTitle that may be big">
                <actions>
                    <ObjectPageHeaderActionButton icon="sap-icon://pull-down" text="show section"  type="Emphasized"/>
                    <ObjectPageHeaderActionButton icon="sap-icon://show" text="show state"  type="Emphasized"/>
                </actions>
            </ObjectPageHeader>
        </headerTitle>

        <headerContent>
            <m:Image src="./test-resources/demokit/sample/Headers/Control/TimMcafeed.png"  height="100%" />
            <layout:VerticalLayout>
                <m:Link text="+33 6 4512 5158"/>
                <m:Link text="tim.mcafeed@sap.com"/>
            </layout:VerticalLayout>

            <layout:HorizontalLayout>
                <m:Image src="./test-resources/demokit/sample/Headers/Control/linkedin.png"></m:Image>
                <m:Image src="./test-resources/demokit/sample/Headers/Control/Twitter.png"></m:Image>
            </layout:HorizontalLayout>

            <layout:VerticalLayout>
                <m:Label text="Hello! I am Tim and I use UxAP"/>
                <m:VBox height="63px">
                    <m:Label text="Achieved goals"/>
                    <m:ProgressIndicator
                            percentValue="30"
                            displayValue="30%"
                            showValue="true"
                            state="None" />
                </m:VBox>
            </layout:VerticalLayout>

            <layout:VerticalLayout>
                <m:Label text="San Jose, USA"/>
            </layout:VerticalLayout>
        </headerContent>

        <sections>
            <ObjectPageSection title="2 actions">
                <subSections>
                    <ObjectPageSubSection title="2 actions">
                        <blocks>
                            <ObjectPageHeader>
                                <actions>
                                    <ObjectPageHeaderActionButton icon="sap-icon://pull-down" text="show section"  type="Emphasized"/>
                                    <ObjectPageHeaderActionButton icon="sap-icon://show" text="show state"  type="Emphasized"/>
                                </actions>
                            </ObjectPageHeader>
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>
            <ObjectPageSection title="1 action">
                <subSections>
                    <ObjectPageSubSection title="1 action with text">
                        <blocks>
                            <ObjectPageHeader>
                                <actions>
                                    <ObjectPageHeaderActionButton icon="sap-icon://pull-down" hideText="false" text="show section"  type="Emphasized"/>
                                </actions>
                            </ObjectPageHeader>
                        </blocks>
                    </ObjectPageSubSection>
                    <ObjectPageSubSection title="1 action with text hidden">
                        <blocks>
                            <ObjectPageHeader>
                                <actions>
                                    <ObjectPageHeaderActionButton icon="sap-icon://pull-down" hideText="true" text="show section"  type="Emphasized"/>
                                </actions>
                            </ObjectPageHeader>
                        </blocks>
                    </ObjectPageSubSection>
                    <ObjectPageSubSection title="1 action without text">
                        <blocks>
                            <ObjectPageHeader>
                                <actions>
                                    <ObjectPageHeaderActionButton icon="sap-icon://pull-down" hideText="false" text=""  type="Emphasized"/>
                                </actions>
                            </ObjectPageHeader>
                        </blocks>
                    </ObjectPageSubSection>
                    <ObjectPageSubSection title="1 button with text">
                        <blocks>
                            <ObjectPageHeader>
                                <actions>
                                    <m:Button icon="sap-icon://pull-down" text="hello text"  type="Emphasized"/>
                                </actions>
                            </ObjectPageHeader>
                        </blocks>
                    </ObjectPageSubSection>
                    <ObjectPageSubSection title="1 button without text">
                        <blocks>
                            <ObjectPageHeader>
                                <actions>
                                    <m:Button icon="sap-icon://pull-down" text=""  type="Emphasized"/>
                                </actions>
                            </ObjectPageHeader>
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>
        </sections>
    </ObjectPageLayout>
</core:View>
