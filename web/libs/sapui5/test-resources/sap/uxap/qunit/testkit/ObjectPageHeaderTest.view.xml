<mvc:View
        xmlns:mvc="sap.ui.core.mvc"
        xmlns:core="sap.ui.core"
        xmlns:comp="sap.ui.comp.variants"
        xmlns="sap.uxap"
        xmlns:layout="sap.ui.layout"
        xmlns:m="sap.m"
        xmlns:sample="sap.uxap.testblocks.multiview"
        xmlns:bl="sap.uxap.sample.Headers.block"
        height="100%"
        controllerName="sap.uxap.testkit.ObjectPageHeaderTest" xmlns:f="sap.ui.layout.form">

    <m:App id="idAppControl2">
        <ObjectPageLayout id="ObjectPageLayout" showAnchorBar="true">
            <headerTitle>
                <ObjectPageHeader id="headerForTest"
                                  headerDesign="{headerDesign>/Type}"
                                  objectTitle="Long name that doesn’t truncate"
                                  objectSubtitle="Long subtitle that doesn’t truncate and goes two lines" pictureShape="Circle"
                                  objectImageURI="test-resources/testkit/profilePicture.png">
                    <navigationBar>
                        <m:Bar>
                            <m:contentLeft>
                                <m:Button icon="sap-icon://nav-back"></m:Button>
                            </m:contentLeft>
                            <m:contentMiddle>
                                <m:Text text="Page Header"/>
                            </m:contentMiddle>
                        </m:Bar>
                    </navigationBar>
                    <actions>
                        <m:Button icon="sap-icon://action" type="Transparent"></m:Button>
                        <m:Button icon="sap-icon://action-settings"></m:Button>
                        <m:Button icon="sap-icon://action"></m:Button>
                        <m:Button icon="sap-icon://action-settings"></m:Button>
                        <m:Button icon="sap-icon://action"></m:Button>
                        <m:Button icon="sap-icon://action-settings"></m:Button>
                        <m:Button icon="sap-icon://action"></m:Button>
                        <m:Button icon="sap-icon://action-settings"></m:Button>
                    </actions>
                </ObjectPageHeader>
            </headerTitle>
            <headerContent>
                <comp:VariantManagement>
                    <comp:items>
                        <core:Item text="My Better Variant" key="MBV"/>
                        <core:Item text="My Other Variant"  key="MOV"/>
                        <core:Item text="My Last Variant"   key="MLV"/>
                    </comp:items>
                </comp:VariantManagement>

                <f:SimpleForm
                        maxContainerCols="1"
                        labelMinWidth="150px"
                        editable="false"
                        layout="ResponsiveLayout">
                    <f:layoutData>
                        <ObjectPageHeaderLayoutData
                                visibleS="true"
                                visibleM="true"
                                visibleL="true"
                                showSeparatorAfter="true"/>
                    </f:layoutData>
                    <m:Label text="User ID"/>
                    <m:Text text="D058794"/>
                    <m:Label text="Functional Area"/>
                    <m:Text text="Developement"/>
                    <m:Label text="Cost Center"/>
                    <m:Text text="PI DFA GD Programs and Product"/>
                    <m:Label text="Email"/>
                    <m:Link text="email@address.com"/>
                </f:SimpleForm>
                <m:ObjectStatus text="In Stock" state="Error"/>
                <m:ObjectStatus title="Label" text="In Stock" state="Warning"/>
                <m:ObjectNumber number="1000" numberUnit="SOOK" emphasized="false" state="Success"/>
                <m:ProgressIndicator
                        percentValue="30"
                        displayValue="30%"
                        showValue="true"
                        state="None" />
                <layout:VerticalLayout>
                    <m:ObjectNumber number="123457890"  emphasized="true"/>
                </layout:VerticalLayout>
                <layout:VerticalLayout>
                    <m:ObjectNumber unit="Text KPI"  emphasized="true"/>
                </layout:VerticalLayout>
                <layout:VerticalLayout>
                    <layout:layoutData>
                        <ObjectPageHeaderLayoutData
                            visibleS="true"
                            visibleM="true"
                            visibleL="true"
                            showSeparatorAfter="false"/>
                    </layout:layoutData>
                    <m:Text text="PC, Unrestricted-Use Stock"/>
                    <m:ObjectNumber number="219" numberUnit="K"></m:ObjectNumber>
                </layout:VerticalLayout>
                <layout:VerticalLayout>
                    <layout:layoutData>
                        <ObjectPageHeaderLayoutData
                            visibleS="false"
                            visibleM="true"
                            visibleL="true"
                            showSeparatorAfter="false"/>
                    </layout:layoutData>
                    <m:Text text="PC, Not in Small Size"/>
                    <m:ObjectNumber number="220" numberUnit="K"></m:ObjectNumber>
                </layout:VerticalLayout>
                <layout:VerticalLayout>
                    <layout:layoutData>
                        <ObjectPageHeaderLayoutData
                                visibleS="true"
                                visibleM="false"
                                visibleL="true"
                                showSeparatorAfter="true"/>
                    </layout:layoutData>
                    <m:Text text="PC, Not in Medium Size"/>
                    <m:ObjectNumber number="221" numberUnit="K"></m:ObjectNumber>
                </layout:VerticalLayout>
                <layout:VerticalLayout>
                    <layout:layoutData>
                        <ObjectPageHeaderLayoutData
                                visibleS="true"
                                visibleM="true"
                                visibleL="false"
                                showSeparatorAfter="true"/>
                    </layout:layoutData>
                    <m:Text text="PC, Not in Large Size"/>
                    <m:ObjectNumber number="219" numberUnit="K"></m:ObjectNumber>
                </layout:VerticalLayout>
                <m:ObjectAttribute title="Label" text="In Stock" />
                <m:Button icon="sap-icon://nurse"/>
                <m:Tokenizer>
                    <m:Token text="Wayne Enterprises"/>
                    <m:Token text="Big's Caramels"/>
                </m:Tokenizer>
            </headerContent>
            <sections>
                <ObjectPageSection title="my section">
                    <subSections>
                        <ObjectPageSubSection title="general info" >
                            <blocks>
                                <bl:GeneralInfo id="generalInfoId">
                                    <ModelMapping internalModelName="Employee" externalModelName="ObjectPageModel" externalPath="/MyEmployee"/>
                                </bl:GeneralInfo>
                            </blocks>
                        </ObjectPageSubSection>

                        <ObjectPageSubSection title="my detail info" >
                            <actions>
                                <m:Button icon="sap-icon://action" type="Transparent" press="onActionPress"/>
                                <m:Button icon="sap-icon://edit" type="Transparent" press="onActionPress"/>
                            </actions>
                            <blocks>
                                <sample:MultiViewBlock />
                                <sample:MultiViewBlock />
                            </blocks>
                            <moreBlocks>
                                <sample:MultiViewBlock />
                            </moreBlocks>
                        </ObjectPageSubSection>
                    </subSections>
                </ObjectPageSection>
                <ObjectPageSection title="copy of my section">
                    <customAnchorBarButton>
                        <m:Button text="my section" />
                    </customAnchorBarButton>
                    <subSections>
                        <ObjectPageSubSection title="general info" >
                            <blocks>
                                <bl:GeneralInfo id="generalInfoId2">
                                    <ModelMapping internalModelName="Employee" externalModelName="ObjectPageModel" externalPath="/MyEmployee"/>
                                </bl:GeneralInfo>
                            </blocks>
                        </ObjectPageSubSection>

                        <ObjectPageSubSection title="my detail info" >
                            <actions>
                                <m:Button icon="sap-icon://action" type="Transparent" press="onActionPress"/>
                                <m:Button icon="sap-icon://edit" type="Transparent" press="onActionPress"/>
                            </actions>
                            <blocks>
                                <sample:MultiViewBlock />
                                <sample:MultiViewBlock />
                            </blocks>
                            <moreBlocks>
                                <sample:MultiViewBlock />
                            </moreBlocks>
                        </ObjectPageSubSection>
                    </subSections>
                </ObjectPageSection>
            </sections>

        </ObjectPageLayout>
    </m:App>
</mvc:View>
