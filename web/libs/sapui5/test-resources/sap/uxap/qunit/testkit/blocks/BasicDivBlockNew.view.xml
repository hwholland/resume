<mvc:View
        xmlns:mvc="sap.ui.core.mvc"
        xmlns:f="sap.ui.layout.form"
        xmlns="sap.m"
        xmlns:l="sap.ui.layout"
        xmlns:html="http://www.w3.org/1999/xhtml"
        controllerName="sap.uxap.testkit.blocks.BasicDivBlockNewController">


    <l:Grid id="Grid" defaultSpan="L4 M6 S12" containerQuery="true">

        <l:VerticalLayout width="100%">
        <f:Form editable="false"
                class="isReadonly">
            <f:layout>
                <f:ResponsiveGridLayout
                        labelSpanL="{ControlModel>/labelSpanL}"
                        labelSpanM="{ControlModel>/labelSpanM}"
                        emptySpanL="{ControlModel>/emptySpanL}"
                        emptySpanM="{ControlModel>/emptySpanM}"
                        columnsL="{ControlModel>/columnsL}"
                        columnsM="{ControlModel>/columnsM}" />
            </f:layout>
            <f:formContainers>
                <f:FormContainer>
                    <f:formElements>
                        <f:FormElement label="Street">
                            <f:fields>
                                <Text text="{BlockPageData>StreetAddressName}" />
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="Postal Code/City">
                            <f:fields>
                                <Text text="{BlockPageData>PostalCode} {BlockPageData>CityName}" />
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="Country">
                            <f:fields>
                                <Text text="{BlockPageData>CountryName}" />
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="Region" visible="{path:'visibleModel>/visible'}">
                            <f:fields>
                                <Text text="{BlockPageData>RegionName}" />
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="Time Zone" visible="{path:'visibleModel>/visible'}">
                            <f:fields>
                                <Text text="{BlockPageData>TimeZone}" />
                            </f:fields>
                        </f:FormElement>
                    </f:formElements>
                </f:FormContainer>

            </f:formContainers>
        </f:Form>
        </l:VerticalLayout>

        <l:VerticalLayout width="100%">
            <Text  class="sapMH4FontSize" text="Communication" />

            <f:Form editable="false"
                    class="isReadonly">
                <f:layout>
                    <f:ResponsiveGridLayout
                            labelSpanL="{ControlModel>/labelSpanL}"
                            labelSpanM="{ControlModel>/labelSpanM}"
                            emptySpanL="{ControlModel>/emptySpanL}"
                            emptySpanM="{ControlModel>/emptySpanM}"
                            columnsL="{ControlModel>/columnsL}"
                            columnsM="{ControlModel>/columnsM}" />
                </f:layout>

                <f:formContainers>

                    <f:FormContainer>
                        <f:formElements>
                            <f:FormElement label="Phone">
                                <f:fields>
                                    <Text text="{BlockPageData>PhoneNumber1}"/>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="Fax">
                                <f:fields>
                                    <Text text="{BlockPageData>FaxNumber}"/>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="Email" visible="{path:'visibleModel>/visible'}">
                                <f:fields>
                                    <Text text="{BlockPageData>EmailAddress}"/>
                                </f:fields>
                            </f:FormElement>
                        </f:formElements>
                    </f:FormContainer>

                </f:formContainers>
            </f:Form>
        </l:VerticalLayout>
        <l:VerticalLayout width="100%">
            <Text  class="sapMH4FontSize" text="Reference Data" />

            <f:Form editable="false"
                    class="isReadonly">
                <f:layout>
                    <f:ResponsiveGridLayout
                            labelSpanL="{ControlModel>/labelSpanL}"
                            labelSpanM="{ControlModel>/labelSpanM}"
                            emptySpanL="{ControlModel>/emptySpanL}"
                            emptySpanM="{ControlModel>/emptySpanM}"
                            columnsL="{ControlModel>/columnsL}"
                            columnsM="{ControlModel>/columnsM}" />
                </f:layout>

                <f:formContainers>

                    <f:FormContainer>
                        <f:formElements>
                            <f:FormElement label="Industry">
                                <f:fields>
                                    <Text text="{BlockPageData>Industry} {BlockPageData>IndustryCode}"/>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="International Location Number">
                                <f:fields>
                                    <Text text="{BlockPageData>InternationalLocationNumber1}"/>
                                </f:fields>
                            </f:FormElement>
                        </f:formElements>
                    </f:FormContainer>

                </f:formContainers>
            </f:Form>
        </l:VerticalLayout>
        <l:VerticalLayout width="100%">
            <Text  class="sapMH4FontSize" text="Tax Information" />

            <f:Form editable="false"
                    class="isReadonly">
                <f:layout>
                    <f:ResponsiveGridLayout
                            labelSpanL="{ControlModel>/labelSpanL}"
                            labelSpanM="{ControlModel>/labelSpanM}"
                            emptySpanL="{ControlModel>/emptySpanL}"
                            emptySpanM="{ControlModel>/emptySpanM}"
                            columnsL="{ControlModel>/columnsL}"
                            columnsM="{ControlModel>/columnsM}" />
                </f:layout>

                <f:formContainers>

                    <f:FormContainer>
                        <f:formElements>
                            <f:FormElement label="Tax Number">
                                <f:fields>
                                    <Text text="{BlockPageData>TaxID1}"/>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="VAT Number">
                                <f:fields>
                                    <Text text="{BlockPageData>VATRegistration}"/>
                                </f:fields>
                            </f:FormElement>
                        </f:formElements>
                    </f:FormContainer>

                </f:formContainers>
            </f:Form>
        </l:VerticalLayout>

    </l:Grid>

</mvc:View>