<mvc:View
        xmlns:mvc="sap.ui.core.mvc"
        xmlns="sap.m"
        controllerName="sap.uxap.testkit.perfs.LineItemTableController">

    <Table growing="true"
           items="{model>/Vendors('3511')/SNAV_VENDOR_BANK_ACCOUNT}">
        <columns>
            <Column>
                <Text text="Name"/>
            </Column>
            <Column>
                <Text text="Bank Key"/>
            </Column>
            <Column>
                <Text text="Bank Account"/>
            </Column>
            <Column>
                <Text text="Country"/>
            </Column>
            <Column>
                <Text text="City"/>
            </Column>
        </columns>
        <items>
            <ColumnListItem>
                <cells>
                    <Text text="{model>BankName}"/>
                    <Text text="{model>BankNumber}"/>
                    <Text text="{model>BankAccount}"/>
                    <Text text="{model>CountryName}"/>
                    <Text text="{model>CityName}"/>
                </cells>
            </ColumnListItem>
        </items>

    </Table>

</mvc:View>