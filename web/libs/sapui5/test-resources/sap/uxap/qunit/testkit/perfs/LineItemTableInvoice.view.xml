<mvc:View
        xmlns:mvc="sap.ui.core.mvc"
        xmlns="sap.m"
        controllerName="sap.uxap.testkit.perfs.LineItemTableController">

    <Table growing="true"
           items="{model>/Vendors('3511')/CINVOICE}">
        <columns>
            <Column>
                <Text text="Number"/>
            </Column>
            <Column>
                <Text text="Invoice Type"/>
            </Column>
            <Column>
                <Text text="Gross Amount"/>
            </Column>
            <Column>
                <Text text="Invoice Date"/>
            </Column>
            <Column>
                <Text text="Baseline Date for Due Date Calculation"/>
            </Column>
            <Column>
                <Text text="Status"/>
            </Column>
        </columns>
        <items>
            <ColumnListItem>
                <cells>
                    <Text text="{model>SupplierInvoice}"/>
                    <Text text="{model>SupplierInvoiceTypeDescription}"/>
                    <Text text="{model>InvoiceGrossAmountInDocCrcy}"/>
                    <Text text="{path:'model>SupplierInvoiceDate', type:'sap.ui.model.type.Date'}"/>
                    <Text text="{path:'model>DueCalculationBaseDate', type:'sap.ui.model.type.Date'}"/>
                    <Text text="{model>ProcessingStatus}"/>
                </cells>
            </ColumnListItem>
        </items>

    </Table>

</mvc:View>