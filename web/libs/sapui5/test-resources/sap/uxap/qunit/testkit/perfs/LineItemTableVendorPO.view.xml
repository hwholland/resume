<mvc:View
        xmlns:mvc="sap.ui.core.mvc"
        xmlns="sap.m"
        controllerName="sap.uxap.testkit.perfs.LineItemTableController">

    <Table growing="true"
           items="{model>/Vendors('3511')/SNAV_VENDOR_PURG_ORG}">
        <columns>
            <Column>
                <Text text="Role"/>
            </Column>
            <Column>
                <Text text="Name"/>
            </Column>
            <Column>
                <Text text="Mobile"/>
            </Column>
            <Column>
                <Text text="Phone"/>
            </Column>
            <Column>
                <Text text="Email"/>
            </Column>
        </columns>
        <items>
            <ColumnListItem>
                <cells>
                    <Text text="{model>PurchasingOrganisationName}"/>
                    <Text text="{model>VendorABCClassification}"/>
                    <Text text="{model>PaymentTermsName}"/>
                    <Text text="{model>IncotermsClassificationName}"/>
                    <Text text="{model>MinimumOrderAmount}"/>
                </cells>
            </ColumnListItem>
        </items>

    </Table>

</mvc:View>