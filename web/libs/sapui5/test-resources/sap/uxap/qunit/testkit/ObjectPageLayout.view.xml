<mvc:View
        xmlns:mvc="sap.ui.core.mvc"
        xmlns:core="sap.ui.core"
        xmlns="sap.uxap"
        xmlns:layout="sap.ui.layout"
        xmlns:m="sap.m"
        xmlns:cl="sap.uxap.testblocks.data.Collection"
        controllerName="sap.uxap.testkit.ObjectPageLayout"
        >

    <ObjectPageLayout id="ObjectPageLayout" enableLazyLoading="false">
        <headerTitle>
            <ObjectPageHeader
                    objectTitle="Carla Grant"
                    objectSubtitle="Senior UI Developer"
                    objectImageURI="test-resources/testkit/profilePicture.png">
            </ObjectPageHeader>
        </headerTitle>
        <headerContent>
            <layout:VerticalLayout>
                <layout:HorizontalLayout>
                    <m:CheckBox text="Section 1" selected="true" select="onCheckSetting">
                        <m:customData>
                            <core:CustomData key="Setting" value="Section1"/>
                        </m:customData>
                    </m:CheckBox>
                </layout:HorizontalLayout>
                <layout:HorizontalLayout>
                    <m:CheckBox text="SubSection 1" selected="true" select="onCheckSetting">
                        <m:customData>
                            <core:CustomData key="Setting" value="SubSection1"/>
                        </m:customData>
                    </m:CheckBox>
                </layout:HorizontalLayout>
                <layout:HorizontalLayout>
                    <m:CheckBox text="Block 1" selected="true" select="onCheckSetting">
                        <m:customData>
                            <core:CustomData key="Setting" value="Block1"/>
                        </m:customData>
                    </m:CheckBox>
                </layout:HorizontalLayout>
            </layout:VerticalLayout>
            <layout:VerticalLayout>
                <layout:HorizontalLayout>
                    <m:CheckBox text="Section 2" selected="true" select="onCheckSetting">
                        <m:customData>
                            <core:CustomData key="Setting" value="Section2"/>
                        </m:customData>
                    </m:CheckBox>
                </layout:HorizontalLayout>
                <layout:HorizontalLayout>
                    <m:CheckBox text="SubSection 2.1" selected="true" select="onCheckSetting">
                        <m:customData>
                            <core:CustomData key="Setting" value="SubSection2"/>
                        </m:customData>
                    </m:CheckBox>
                    <m:CheckBox text="Block 2.1" selected="true" select="onCheckSetting">
                        <m:customData>
                            <core:CustomData key="Setting" value="Block2"/>
                        </m:customData>
                    </m:CheckBox>
                    <m:CheckBox text="Show More " selected="true" select="onCheckSetting">
                        <m:customData>
                            <core:CustomData key="Setting" value="ShowMoreBlock2"/>
                        </m:customData>
                    </m:CheckBox>
                </layout:HorizontalLayout>
                <layout:HorizontalLayout>
                    <m:CheckBox text="SubSection 2.2" selected="true" select="onCheckSetting">
                        <m:customData>
                            <core:CustomData key="Setting" value="SubSection22"/>
                        </m:customData>
                    </m:CheckBox>
                    <m:CheckBox text="Block 2.2" selected="true" select="onCheckSetting">
                        <m:customData>
                            <core:CustomData key="Setting" value="Block22"/>
                        </m:customData>
                    </m:CheckBox>
                </layout:HorizontalLayout>
            </layout:VerticalLayout>
            <layout:VerticalLayout>
                <layout:HorizontalLayout>
                    <m:CheckBox text="Section 3" selected="false" select="onCheckSetting">
                        <m:customData>
                            <core:CustomData key="Setting" value="Section3"/>
                        </m:customData>
                    </m:CheckBox>
                </layout:HorizontalLayout>
                <layout:HorizontalLayout>
                    <m:CheckBox text="SubSection 3" selected="false" select="onCheckSetting">
                        <m:customData>
                            <core:CustomData key="Setting" value="SubSection3"/>
                        </m:customData>
                    </m:CheckBox>
                </layout:HorizontalLayout>
                <layout:HorizontalLayout>
                    <m:CheckBox text="Block 3" selected="false" select="onCheckSetting">
                        <m:customData>
                            <core:CustomData key="Setting" value="Block3"/>
                        </m:customData>
                    </m:CheckBox>
                </layout:HorizontalLayout>
            </layout:VerticalLayout>
        </headerContent>
        <sections>

            <ObjectPageSection title="1st section" visible="{path:'ConfigModel>/Section1'}">
                <subSections>
                    <ObjectPageSubSection title="1st section - 1st sub section" visible="{path:'ConfigModel>/SubSection1'}">
                        <blocks>
                            <cl:CollectionBlock visible="{path:'ConfigModel>/Block1'}">
                                <cl:mappings>
                                    <ModelMapping internalModelName="Collection" externalModelName="ObjectPageModel"
                                                  externalPath="/Employee"/>
                                </cl:mappings>
                            </cl:CollectionBlock>
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>

            <ObjectPageSection title="2nd section" visible="{path:'ConfigModel>/Section2'}">
                <subSections>
                    <ObjectPageSubSection title="2nd section - 1st sub section" visible="{path:'ConfigModel>/SubSection2'}">
                        <blocks>
                            <cl:CollectionBlock visible="{path:'ConfigModel>/Block2'}" showSubSectionMore="{path:'ConfigModel>/ShowMoreBlock2'}">
                                <cl:mappings>
                                    <ModelMapping internalModelName="Collection" externalModelName="ObjectPageModel"
                                                  externalPath="/Employee"/>
                                </cl:mappings>
                            </cl:CollectionBlock>
                        </blocks>
                    </ObjectPageSubSection>
                    <ObjectPageSubSection title="2nd section - 2nd sub section" visible="{path:'ConfigModel>/SubSection22'}">
                        <blocks>
                            <cl:CollectionBlock visible="{path:'ConfigModel>/Block22'}" showSubSectionMore="false">
                                <cl:mappings>
                                    <ModelMapping internalModelName="Collection" externalModelName="ObjectPageModel"
                                                  externalPath="/Employee"/>
                                </cl:mappings>
                            </cl:CollectionBlock>
                        </blocks>
                    </ObjectPageSubSection>

                </subSections>
            </ObjectPageSection>


            <ObjectPageSection title="3rd section" visible="{path:'ConfigModel>/Section3'}">
                <subSections>
                    <ObjectPageSubSection title="3rd section - 1st sub section" visible="{path:'ConfigModel>/SubSection3'}">
                        <blocks>
                            <cl:CollectionBlock visible="{path:'ConfigModel>/Block3'}">
                                <cl:mappings>
                                    <ModelMapping internalModelName="Collection" externalModelName="ObjectPageModel"
                                                  externalPath="/Employee"/>
                                </cl:mappings>
                            </cl:CollectionBlock>
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>

        </sections>
    </ObjectPageLayout>

</mvc:View>
