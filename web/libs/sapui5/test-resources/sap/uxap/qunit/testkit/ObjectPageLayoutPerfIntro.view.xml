<mvc:View
        xmlns:mvc="sap.ui.core.mvc"
        xmlns="sap.m"
        controllerName="sap.uxap.testkit.ObjectPageLayoutPerfIntro"
        height="100%">
    <Page id="PerfPage" enableScrolling="false">
        <customHeader>
            <Toolbar>
                <Button text="Remove OP" id="" press="onRemoveContent"/>
                <Button text="OP 4Blocks per section" id="ObjectPageMoreDataButton" press="onDisplayObjectPageWithMoreData" class="sapUiVisibleOnlyOnDesktop"/>
                <Button text="OP 1Block per section" id="ObjectPageMoreDataButtonOneBlock" press="onDisplayObjectPageWithMoreDataOneBlock" class="sapUiVisibleOnlyOnDesktop"/>
                <Button text="OP With table" id="ObjectPageMoreDataButtonTables" press="onDisplayObjectPageWithMoreDataWithTables" class="sapUiVisibleOnlyOnDesktop"/>
                <Button text="OP config file" id="ObjectPageMoreDataButtonConfig" press="onDisplayObjectPageWithMoreDataConfig" class="sapUiVisibleOnlyOnDesktop"/>
                <Button text="OP" id="ObjectPageButton" press="onDisplayObjectPage" class="sapUiVisibleOnlyOnDesktop"/>
                <Button text="OP with data" id="ObjectPageDataButton" press="onDisplayObjectPageWithData" class="sapUiVisibleOnlyOnDesktop"/>
                <Button icon="sap-icon://overflow" press="onOpen" class="sapUiHideOnDesktop"/>
            </Toolbar>
        </customHeader>

        <content/>
    </Page>
</mvc:View>
