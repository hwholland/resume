                            <sample:MultiViewBlock/>
                            <t:SimpleEdit/>
                            <m:Button icon="sap-icon://edit" press="onEditPress"/>
                            <m:Text text="Text + sample + objectpageblock + Button + Text + Input"/>
                            <m:Input/>
