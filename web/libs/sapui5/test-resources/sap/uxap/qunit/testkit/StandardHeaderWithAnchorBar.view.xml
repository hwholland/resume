                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>
            <ObjectPageSection title="My Action Block Test">
                <subSections>
                    <ObjectPageSubSection title="Subsection for block test 1" >
                        <blocks>
                            <t:SimpleEdit/>
