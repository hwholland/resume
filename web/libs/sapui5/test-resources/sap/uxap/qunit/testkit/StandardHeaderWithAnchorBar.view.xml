<core:View
        xmlns:core="sap.ui.core"
        xmlns="sap.uxap"
        xmlns:layout="sap.ui.layout"
        xmlns:m="sap.m"
        xmlns:c="sap.uxap.sample.Headers.HeaderExtension"
        xmlns:sample="sap.uxap.testblocks.multiview"
        xmlns:t="sap.uxap.testblocks.objectpageblock"
        xmlns:bl="sap.uxap.sample.Headers.block"
        height="100%"
        controllerName="sap.uxap.testkit.StandardHeaderWithAnchorBar">
    <ObjectPageLayout id="StandardHeaderWithAnchorBar" showAnchorBar="true" height="100%">
        <headerTitle>
            <ObjectPageHeader objectImageURI="./test-resources/demokit/sample/Headers/Control/TimMcafeed.png"
                              objectTitle="Walter A. Shewhart"
                              objectSubtitle="Senior Quality Engineer"/>
        </headerTitle>
        <headerContent>
            <layout:VerticalLayout>
                <m:Text id="name" text=""/>
                <layout:HorizontalLayout>
                    <m:Text text="Thomas MÃ¼ller"/>
                </layout:HorizontalLayout>
                <m:Link text="+33 666 666 666"/>
                <m:Link text="Walter.Shewhart@sap.com"/>
            </layout:VerticalLayout>
            <layout:VerticalLayout>
                <layout:HorizontalLayout>
                    <m:Link text="Twitter" target="_blank"/>
                    <m:Link text="LinkedIn" target="_blank"/>
                </layout:HorizontalLayout>
            </layout:VerticalLayout>
            <layout:VerticalLayout>
                <m:Label id="headerDescription" text="Personal description"/>
                <m:Label id="headerRole" text="Role Specific info"/>
            </layout:VerticalLayout>
        </headerContent>
        <sections>
            <ObjectPageSection title="My Information" icon="sap-icon://employee">
                <subSections>
                    <ObjectPageSubSection title="General Information"  icon="sap-icon://doctor">
                        <blocks>
                            <bl:GeneralInfo id="generalInfoId">
                                <ModelMapping internalModelName="Employee" externalModelName="ObjectPageModel"
                                              externalPath="/MyEmployee"/>
                            </bl:GeneralInfo>
                        </blocks>
                    </ObjectPageSubSection>
                    <ObjectPageSubSection title="Detail Information" >
                        <actions>
                            <m:Button icon="sap-icon://action" type="Transparent" press="onActionPress"/>
                            <m:Button icon="sap-icon://edit" type="Transparent" press="onActionPress"/>
                        </actions>
                        <blocks>
                            <sample:MultiViewBlock/>
                            <sample:MultiViewBlock/>
                        </blocks>
                        <moreBlocks>
                            <sample:MultiViewBlock/>
                        </moreBlocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>
            <ObjectPageSection title="My Resize Test">
                <subSections>
                    <ObjectPageSubSection title="2 Blocks" >
                        <blocks>
