                            <sample:MultiViewBlock/>
                            <sample:MultiViewBlock/>
                        </blocks>
                        <moreBlocks>
                            <sample:MultiViewBlock/>
                        </moreBlocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>
            <ObjectPageSection title="My Maximum Blocks Tests">
