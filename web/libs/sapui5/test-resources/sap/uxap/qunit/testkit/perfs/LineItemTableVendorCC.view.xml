<mvc:View
        xmlns:mvc="sap.ui.core.mvc"
        xmlns="sap.m"
        controllerName="sap.uxap.testkit.perfs.LineItemTableController">

    <Table growing="true"
           items="{model>/Vendors('3511')/SNAV_VENDOR_COMPANYCODE}">
        <columns>
            <Column>
                <Text text="Company"/>
            </Column>
            <Column>
                <Text text="Location"/>
            </Column>
            <Column>
                <Text text="Payment Terms"/>
            </Column>
            <Column>
                <Text text="Payment Block"/>
            </Column>
        </columns>
        <items>
            <ColumnListItem>
                <cells>
                    <Text text="{model>CompanyCodeName} {model>CompanyCode}"/>
                    <Text text="{model>CityName} {model>CountryName}"/>
                    <Text text="{model>PaymentTermsName}"/>
                    <Text text="{model>PaymentBlockingReasonName}"/>
                </cells>
            </ColumnListItem>
        </items>

    </Table>

</mvc:View>