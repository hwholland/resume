<mvc:View
        xmlns:mvc="sap.ui.core.mvc"
        xmlns:forms="sap.ui.layout.form"
        xmlns:uxap="sap.uxap"
        xmlns:m="sap.m"
        xmlns:core="sap.ui.core"
        xmlns:l="sap.ui.layout"
        xmlns:sample="sap.uxap.testblocks.objectpageblock"
        controllerName="sap.uxap.testblocks.mixedblock.MixedBlockController"
        xmlns="sap.m">

    <l:Grid
            defaultSpan="L12 M12 S12"
            width="auto">
        <l:content>
            <forms:SimpleForm
                    maxContainerCols="2"
                    editable="false"
                    layout="ResponsiveGridLayout"
                    labelSpanL="4"
                    labelSpanM="4"
                    emptySpanL="3"
                    emptySpanM="3"
                    columnsL="1"
                    columnsM="1"
                    width="100%">

                <core:Title text="Mixed Block"/>
                <VBox>
                    <sample:SimpleEdit/>
                    <sample:SimpleEdit/>
                    <sample:SimpleEdit/>
                </VBox>
            </forms:SimpleForm>
        </l:content>
    </l:Grid>

</mvc:View>
