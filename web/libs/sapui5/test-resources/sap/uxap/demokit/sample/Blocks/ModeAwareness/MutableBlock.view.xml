<mvc:View

        xmlns:forms="sap.ui.layout.form"
        xmlns:m="sap.m"
        xmlns:mvc="sap.ui.core.mvc"
        xmlns:core="sap.ui.core"
        xmlns="sap.m"
        width="100%"
        controllerName="sap.uxap.testblocks.mutable.MutableBlockController">

    <forms:SimpleForm
            maxContainerCols="2"
            editable="false"
            layout="ResponsiveGridLayout">
        <core:Title text="Location"></core:Title>
        <Label text="Country"></Label>
        <Text text="France"></Text>
        <Label text="Subsidiary"></Label>
        <Text text="SAP France" id="valueSubsidiary"></Text>
        <Label text="Building"></Label>
        <Text text="LVL B"  id="valueBuilding"></Text>
        <Label text="Room"></Label>
        <Text text="AppHaus" id="valueRoom"></Text>
    </forms:SimpleForm>

    <m:SegmentedButton>
        <m:buttons>
            <m:Button text="switch to Mode1" id="mode1" press="toggleMode" />
            <m:Button text="switch to Mode2" id="mode2" press="toggleMode" />
        </m:buttons>
    </m:SegmentedButton>

</mvc:View>