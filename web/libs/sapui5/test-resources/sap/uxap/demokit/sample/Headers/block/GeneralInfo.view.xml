<mvc:View

        xmlns:forms="sap.ui.layout.form"
        xmlns:mvc="sap.ui.core.mvc"
        xmlns:core="sap.ui.core"
        xmlns="sap.m">

        <forms:SimpleForm
                maxContainerCols="2"
                editable="false"
                layout="ResponsiveGridLayout"
                labelSpanL="6"
                labelSpanM="6"
                columnsL="1"
                columnsM="1"
                breakpointL="600"
                breakpointM="300">
            <core:Title text="Employee"></core:Title>
            <Label text="Name"></Label>
            <Text text="{Employee>FirstName} {Employee>LastName}"></Text>
            <Label text="Job Title"></Label>
            <Text text="{Employee>JobTitle}"></Text>
            <Label text="Departement"></Label>
            <Text text="{Employee>Department}"></Text>
            <Label text="Cost Center"></Label>
            <Text text="{Employee>CostCenter}"></Text>
        </forms:SimpleForm>

        <forms:SimpleForm
                maxContainerCols="2"
                editable="false"
                layout="ResponsiveGridLayout"
                labelSpanL="6"
                labelSpanM="6"
                columnsL="1"
                columnsM="1"
                breakpointL="600"
                breakpointM="300">
            <core:Title text="Contact"></core:Title>
            <Label text="Email"></Label>
            <Text text="{Employee>Email}"></Text>
            <Label text="Phone"></Label>
            <Text text="{Employee>Phone}"></Text>
            <Label text="Mobile"></Label>
            <Text text="{Employee>Mobile}"></Text>
        </forms:SimpleForm>

        <forms:SimpleForm
                maxContainerCols="2"
                editable="false"
                layout="ResponsiveGridLayout"
                labelSpanL="6"
                labelSpanM="6"
                columnsL="1"
                columnsM="1"
                breakpointL="600"
                breakpointM="300">
            <core:Title text="Location"></core:Title>
            <Label text="Country"></Label>
            <Text text="{Employee>Country}"></Text>
            <Label text="Subsidary"></Label>
            <Text text="{Employee>Location}"></Text>
            <Label text="Building"></Label>
            <Text text="{Employee>Building}"></Text>
            <Label text="Room"></Label>
            <Text text="{Employee>Room}"></Text>
            <Label text="press me"></Label>
        </forms:SimpleForm>

</mvc:View>