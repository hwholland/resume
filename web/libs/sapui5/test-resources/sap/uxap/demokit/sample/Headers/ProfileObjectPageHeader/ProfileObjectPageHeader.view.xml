<core:View
        xmlns:core="sap.ui.core"
        xmlns="sap.uxap"
        xmlns:layout="sap.ui.layout"
        xmlns:m="sap.m"
        xmlns:comp="sap.ui.comp.variants"
        xmlns:f="sap.ui.layout.form"
        xmlns:bl="sap.uxap.sample.Headers.block"
        xmlns:blockcolor="sap.uxap.sample.blockscolor"
        controllerName="sap.uxap.sample.Headers.ProfileObjectPageHeader.ProfileObjectPageHeader"
        height="100%">


    <ObjectPageLayout id="ObjectPageLayout">
        <headerTitle>
            <ObjectPageHeader id="headerForTest"
                              headerDesign="Dark"
                              objectTitle="Rowan Atkinson"
                              objectImageShape="Circle"
                              objectSubtitle="Manager, HCM">
                <navigationBar>
                    <m:Bar>
                        <m:contentLeft>
                            <m:Button icon="sap-icon://nav-back"></m:Button>
                        </m:contentLeft>
                        <m:contentMiddle>
                            <m:Text text="Employee Profile"/>
                        </m:contentMiddle>
                    </m:Bar>
                </navigationBar>
                <actions>
                    <ObjectPageHeaderActionButton icon="sap-icon://tree" text="tree"/>
                    <ObjectPageHeaderActionButton icon="sap-icon://action" text="action"/>
                </actions>
            </ObjectPageHeader>
        </headerTitle>
        <headerContent>
            <m:Image src="./test-resources/sap/uxap/demokit/sample/img/ProfileHeader.png" width="100px" height="100px"/>
            <f:SimpleForm
                    maxContainerCols="1"
                    labelMinWidth="100px"
                    editable="false"
                    layout="ResponsiveLayout">
                <f:layoutData>
                    <ObjectPageHeaderLayoutData
                            width="40%" />
                </f:layoutData>

                <m:Label text="Address"/>
                <m:Text text="BLR.01, B2.023"/>
                <m:Label text="Office phone"/>
                <m:Text text="+91-90100-98100"/>
                <m:Label text="Email"/>
                <m:Link text="rowan@pic.com"/>
            </f:SimpleForm>
            <layout:HorizontalLayout>
                <m:Image width="21px" height="21px" src="./test-resources/sap/uxap/demokit/sample/img/linkedInIcon.png"/>
                <m:Image width="20px" height="20px" src="./test-resources/sap/uxap/demokit/sample/img/facebookIcon.png"/>
                <m:Image width="21px" height="21px" src="./test-resources/sap/uxap/demokit/sample/img/twitterIcon.png"/>
            </layout:HorizontalLayout>
            <m:ObjectStatus state="Success" icon="sap-icon://employee-approvals" text="Available" />
            <layout:VerticalLayout>
                <m:Label text="Bangalore, India"/>
                <m:Label text="3:00 PM, Friday"/>
            </layout:VerticalLayout>
        </headerContent>
        <sections>
            <ObjectPageSection title="my section 1">
                <subSections>
                    <ObjectPageSubSection title="Green" >
                        <blocks>
                            <blockcolor:BlockGreen id="bg1" />
                        </blocks>
                    </ObjectPageSubSection>

                </subSections>
            </ObjectPageSection>
            <ObjectPageSection title="my section 2">
                <subSections>
                    <ObjectPageSubSection title="Orange" >
                        <blocks>
                            <blockcolor:BlockOrange id="bo1" />
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>
        </sections>
    </ObjectPageLayout>
</core:View>
