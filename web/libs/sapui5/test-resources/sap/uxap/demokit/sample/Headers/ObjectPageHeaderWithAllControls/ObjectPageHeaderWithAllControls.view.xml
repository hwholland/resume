<core:View
        xmlns:core="sap.ui.core"
        xmlns="sap.uxap"
        xmlns:layout="sap.ui.layout"
        xmlns:m="sap.m"
        xmlns:comp="sap.ui.comp.variants"
        xmlns:f="sap.ui.layout.form"
        xmlns:bl="sap.uxap.sample.Headers.block"
        xmlns:blockcolor="sap.uxap.sample.blockscolor"
        controllerName="sap.uxap.sample.Headers.ObjectPageHeaderWithAllControls.ObjectPageHeaderWithAllControls"
        height="100%">


    <ObjectPageLayout id="ObjectPageLayout">
        <headerTitle>
            <ObjectPageHeader id="headerForTest"
                              headerDesign="Light"
                              objectTitle="Long title that wraps and goes over more lines"
                              objectSubtitle="Long subtitle that wraps and goes over more lines"
                              objectImageURI="test-resources/testkit/profilePicture.png" objectImageShape = "Circle">
                <actions>
                    <ObjectPageHeaderActionButton icon="sap-icon://action" text="action"/>
                    <ObjectPageHeaderActionButton icon="sap-icon://action-settings" text="settings"/>
                    <ObjectPageHeaderActionButton icon="sap-icon://edit" text="edit"/>
                    <ObjectPageHeaderActionButton icon="sap-icon://save" text="save" visible="false"/>
                    <ObjectPageHeaderActionButton icon="sap-icon://refresh" text="{buttons>/text}"/>
                    <ObjectPageHeaderActionButton icon="{buttons>/icon}" text="{path:'/text', model:'buttons', formatter:'.onFormat'}"/>
                </actions>
            </ObjectPageHeader>
        </headerTitle>
        <headerContent>
            <f:SimpleForm
                    maxContainerCols="1"
                    labelMinWidth="150px"
                    editable="false"
                    layout="ResponsiveLayout">
                <f:layoutData>
                    <ObjectPageHeaderLayoutData
                            width="50%" />
                </f:layoutData>
                <m:Label text="User ID"/>
                <m:Text text="12345678"/>
                <m:Label text="Functional Area"/>
                <m:Text text="Developement"/>
                <m:Label text="Cost Center"/>
                <m:Text text="PI DFA GD Programs and Product"/>
                <m:Label text="Email"/>
                <m:Link text="email@address.com"/>
            </f:SimpleForm>
            <m:ObjectStatus text="In Stock" state="Error"/>
            <m:ObjectStatus title="Label" text="In Stock" state="Warning"/>
            <m:ObjectNumber number="1000" numberUnit="SOOK" emphasized="false" state="Success"/>
            <m:ProgressIndicator
                    percentValue="30"
                    displayValue="30%"
                    showValue="true"
                    state="None" />
            <layout:VerticalLayout>
                <m:ObjectNumber number="123457890"  emphasized="true"/>
            </layout:VerticalLayout>
            <layout:VerticalLayout>
                <m:ObjectNumber unit="Text KPI"  emphasized="true"/>
            </layout:VerticalLayout>
            <layout:VerticalLayout>
                <layout:layoutData>
                    <ObjectPageHeaderLayoutData
                            showSeparatorAfter="false"/>
                </layout:layoutData>
                <m:Label text="PC, Unrestricted-Use Stock"/>
                <m:ObjectNumber number="219" numberUnit="K"></m:ObjectNumber>
            </layout:VerticalLayout>
            <layout:VerticalLayout>
                <layout:layoutData>
                    <ObjectPageHeaderLayoutData
                            visibleS="false"
                            showSeparatorAfter="false"/>
                </layout:layoutData>
                <m:Label text="PC, Not in Small Size"/>
                <m:ObjectNumber number="220" numberUnit="K"></m:ObjectNumber>
            </layout:VerticalLayout>
            <layout:VerticalLayout>
                <layout:layoutData>
                    <ObjectPageHeaderLayoutData
                            visibleM="false"
                            showSeparatorAfter="true"/>
                </layout:layoutData>
                <m:Label text="PC, Not in Medium Size"/>
                <m:ObjectNumber number="221" numberUnit="K"></m:ObjectNumber>
            </layout:VerticalLayout>
            <layout:VerticalLayout>
                <layout:layoutData>
                    <ObjectPageHeaderLayoutData
                            visibleL="false"
                            showSeparatorAfter="true"/>
                </layout:layoutData>
                <m:Label text="PC, Not in Large Size"/>
                <m:ObjectNumber number="219" numberUnit="K"></m:ObjectNumber>
            </layout:VerticalLayout>
            <m:ObjectAttribute title="Label" text="In Stock" />
            <m:Button icon="sap-icon://nurse"/>
            <m:Tokenizer>
                <m:Token text="Wayne Enterprises"/>
                <m:Token text="Big's Caramels"/>
            </m:Tokenizer>
        </headerContent>
        <sections>
            <ObjectPageSection title="my section 1">
                <subSections>
                    <ObjectPageSubSection title="Green">
                        <blocks>
                            <blockcolor:BlockGreen id="bg1" />
                        </blocks>
                    </ObjectPageSubSection>

                </subSections>
            </ObjectPageSection>
            <ObjectPageSection title="my section 2">
                <subSections>
                    <ObjectPageSubSection title="Orange">
                        <blocks>
                            <blockcolor:BlockOrange id="bo1" />
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>
        </sections>
    </ObjectPageLayout>
</core:View>
