<mvc:View
        xmlns:forms="sap.ui.layout.form"
        xmlns:mvc="sap.ui.core.mvc"
        xmlns:core="sap.ui.core"
        xmlns="sap.m"
        xmlns:viz="sap.viz.ui5"
        xmlns:config="sap.viz.ui5.types"
        controllerName="sap.uxap.sample.Blocks.MultiView.MultiViewBlockCommon">

    <SegmentedButton selectedButton="barChartBtn" select="handleSelect">
        <Button id="lineChartBtn" text="Line chart"/>
        <Button id="barChartBtn" text="Bar chart"/>
    </SegmentedButton>


    <viz:Bar id="chart" width="80%" height="400px">
        <viz:title>
            <config:Title text="Bar" visible="true" />
        </viz:title>
    </viz:Bar>

</mvc:View>