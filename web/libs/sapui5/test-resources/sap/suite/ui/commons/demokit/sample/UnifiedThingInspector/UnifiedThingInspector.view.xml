<core:View
	height="100%"
	controllerName="sap.suite.ui.commons.sample.UnifiedThingInspector.UnifiedThingInspector"
	xmlns="sap.suite.ui.commons"
	xmlns:m="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core">
	<UnifiedThingInspector
		id="unified1"
		height="100%"
		icon="test-resources/sap/suite/ui/commons/demokit/images/strawberries_frozen.jpg"
		title="Article"	name="Frozen Spanish Strawberries"
		description="90345929"
		actionsVisible="true"
	    transactionsVisible="true"
	    backAction="backAction"
	    configurationButtonPress="pressConfig"
	    actionsButtonPress="pressActions"
	    transactionsButtonPress="pressTransactions">
		<kpis>
			<KpiTile value="In Approval" description="Status" doubleFontSize="false" valueStatus="Critical" class="sapDemoKitSuiteKTile"/>
			<KpiTile value="32" description="Gross national program" valueScale="M" valueUnit="USD" valueStatus="Good" class="sapDemoKitSuiteKTile"/>
		</kpis>
		<facets>
			<FacetOverview title="General" heightType="Auto" press="pressGeneralFacet" rowSpan="2">
				<content>
					<m:Table backgroundDesign="Transparent" showSeparators="None" class="sapSuiteUtiGeneralInTeaser">
						<m:columns>
							<m:Column width="42%" hAlign="End"/><m:Column/>
						</m:columns>
						<m:items>
							<m:ColumnListItem><m:Label text="Locked for:"/><m:Text text="Actual Primary Costs"/></m:ColumnListItem>
							<m:ColumnListItem><m:Label text=""/><m:Text text="Actual Secondary Costs"/></m:ColumnListItem>
							<m:ColumnListItem><m:Label text="Valid From:"/><m:Text text="01.01.2010"/></m:ColumnListItem>
							<m:ColumnListItem><m:Text/><m:Text/></m:ColumnListItem>
							<m:ColumnListItem><m:Label text="Valid To:"/><m:Text text="Partially Invoiced"/></m:ColumnListItem>
							<m:ColumnListItem><m:Label text="Created on:"/><m:Text text="01.01.2010"/></m:ColumnListItem>
							<m:ColumnListItem><m:Label text="Created by:"/><m:Text text="John Smith"/><m:Link href="http://www.sap.com"/></m:ColumnListItem>
							<m:ColumnListItem><m:Text/><m:Text/></m:ColumnListItem>
							<m:ColumnListItem><m:Label text="Responsible:"/><m:Link text="John Bradford" press="pressJB"/></m:ColumnListItem>
						</m:items>
					</m:Table>
				</content>
			</FacetOverview>
			<FacetOverview title="Description" heightType="Auto">
				<content>
					<m:Text text="In this example, the header area contains the object image, condensed object header, and two key values represented by the KpiTile controls. The content area contains teaser tiles represented by the FacetOverview controls. Depending on the device type and orientation, the layout changes respectively. The footer area contains the configuration icon, the Open In menu represented by the LinkActionSheet control, and the Actions menu represented by the ActionSheet control."/>
				</content>
			</FacetOverview>
			<FacetOverview title="Sales Organization 0001 - Walldorf" heightType="Auto">
				<content>
					<m:FlexBox>
						<core:Icon src="sap-icon://globe" size="4rem" class="sapUtiImagePaddingRight"/>
						<m:VBox class="sapUtiSalesOrgFacet">
							<m:HBox>
								<m:Label text="Distribution Channel General Brenenal" class="sapUtiSalesOrgKeyLabel"/>
								<m:Label text=":" class="sapUtiSalesOrgDelimiter"/>
								<m:Text text="01 - Electronic Sales" class="sapUtiSalesOrgValueLabel"/>
							</m:HBox>
							<m:HBox>
								<m:Label text="Division" class="sapUtiSalesOrgKeyLabel"/>
								<m:Label text=":" class="sapUtiSalesOrgDelimiter"/>
								<m:Text text="01 - Industry" class="sapUtiSalesOrgValueLabel"/>
							</m:HBox>
							<m:HBox>
								<m:layoutData><l:GridData visibleOnSmall="false"/></m:layoutData>
								<m:Label text="Sales Group" class="sapUtiSalesOrgKeyLabel"/>
								<m:Label text=":" class="sapUtiSalesOrgDelimiter"/>
								<m:Text text="001 Sales Group 01" class="sapUtiSalesOrgValueLabel"/>
							</m:HBox>
						</m:VBox>
					</m:FlexBox>
				</content>
			</FacetOverview>
			<FacetOverview title="Internal Orders" quantity="4" heightType="M" press="pressOrdersFacet">
				<content>
					<l:Grid id="form-orders" class="sapUtiFacetOverviewContentMargin" defaultSpan="L6 M6 S6">
						<m:VBox><m:Label text="CeBit Demo:"/><m:Text text="040 Event"/></m:VBox>
						<m:VBox><m:Label text="Order 2:"/><m:Text text="040 Event"/></m:VBox>
						<m:VBox>
							<m:Label text="Order 3:"/><m:Text text="040 Event"/>
							<m:layoutData><l:GridData visibleOnSmall="false"/></m:layoutData>
						</m:VBox>
						<m:VBox>
							<m:Label text="Order 4:"/><m:Text text="040 Event"/>
							<m:layoutData><l:GridData visibleOnSmall="false"/></m:layoutData>
						</m:VBox>
	        		</l:Grid>
				</content>
			</FacetOverview>
			<FacetOverview title="Sales view" heightType="Auto"/>
		</facets>	
	</UnifiedThingInspector>
</core:View>