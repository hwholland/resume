<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:m="sap.m"
        xmlns="sap.suite.ui.commons"
        controllerName="sap.suite.ui.commons.sample.ProcessFlowAggregation.C"
        xmlns:html="http://www.w3.org/1999/xhtml"
        height="100%">

  <html:br/>
  <m:Panel id="mainpage1">
    <m:Label text="Process Flow simple sample case with zooming buttons - scrollable and aggregated nodes"/>
    <html:br/>
    <m:Button text="Zoom In" press="onZoomIn"/>
    <m:Button text="Zoom Out" press="onZoomOut"/>
    <m:Button text="Toggle Highlight path" press="onHighlight"/>
    <html:div style="height:400px;width:600px">
    <ProcessFlow id="processflow1" scrollable="true" nodePress="onNodePress" nodes="{/nodes}" lanes="{/lanes}">
      <nodes>
        <ProcessFlowNode laneId="{lane}" nodeId="{id}" title="{title}" titleAbbreviation = "{titleAbbreviation}" isTitleClickable = "{isTitleClickable}" children="{children}" state="{state}" stateText="{stateText}" texts="{texts}" highlighted="{highlighted}" focused="{focused}" type="{type}"/>
      </nodes>
      <lanes>
        <ProcessFlowLaneHeader laneId="{id}" iconSrc="{icon}" text="{label}" position="{position}"/>
      </lanes>
    </ProcessFlow>
    </html:div>
    <html:br/>

  </m:Panel>
</mvc:View>
