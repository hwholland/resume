<mvc:View
	controllerName="sap.suite.ui.commons.sample.LinkActionSheet.LinkActionSheet"
	xmlns="sap.suite.ui.commons"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:m="sap.m">
  <l:VerticalLayout class="marginTopLeft">
    <l:content>
      <m:Button text="Only Buttons" press="handleOpenOnlyBtn" />
      <m:Button text="Only Links" press="handleOpenOnlyLnk" />
      <m:Button text="Links and Buttons" press="handleOpenLnkBtn" />
      <m:Button text="Links and Mixed Buttons" press="handleOpenLnkMBtn" />
    </l:content>
  </l:VerticalLayout>
</mvc:View>
