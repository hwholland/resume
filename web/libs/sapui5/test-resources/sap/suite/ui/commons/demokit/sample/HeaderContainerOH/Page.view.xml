<mvc:View
    height="100%"
    controllerName="sap.suite.ui.commons.sample.HeaderContainerOH.Page"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    xmlns="sap.m"
    xmlns:suite="sap.suite.ui.commons">
    <ObjectHeader
        id="oh1"
        responsive="true"
        binding="{/ProductCollection/0}"
        intro="{Description}"
        title="{Name}"
        number="{Price}"
        numberUnit="{CurrencyCode}"
        showMarkers="true"
        markFlagged="true"
        markFavorite="true"
        numberState="Success"
        backgroundDesign="Translucent">
        <attributes>
            <ObjectAttribute
                title="Manufacturer"
                text="{SupplierName}"/>
        </attributes>
        <statuses>
            <ObjectStatus
                title="Approval"
                text="Pending"
                state="Warning"/>
        </statuses>
        <headerContainer>
                           <suite:HeaderContainer xmlns="sap.suite.ui.commons" xmlns:m="sap.m" scrollStep="200" scrollTime="500">  
                                 <suite:items>  
                                        <suite:HeaderCell height="auto">  
                                               <suite:north>  
                                                     <suite:HeaderCellItem height="90%">  
                                                            <suite:content>  
                                                                   <suite:ComparisonChart size="S" scale="M">  
                                                                    <suite:data>  
                                                                          <suite:ComparisonData       title="Americas" value="234" color="Good"/>  
                                                                          <suite:ComparisonData       title="EMEA" value="97" color="Error"/>  
                                                                          <suite:ComparisonData       title="APAC" value="197" color="Critical"/>  
                                                                    </suite:data>  
                                                             </suite:ComparisonChart>  
                                                            </suite:content>  
                                                     </suite:HeaderCellItem>  
                                               </suite:north>  
                                               <suite:south>  
                                                     <suite:HeaderCellItem height="10%">  
                                                            <suite:content>  
                                                                   <m:Label text="EUR, Compare across regions" />  
                                                            </suite:content>  
                                                     </suite:HeaderCellItem>  
                                               </suite:south>  
                                        </suite:HeaderCell>  
                                        <suite:HeaderCell height="auto">  
                                               <suite:north>  
                                                     <suite:HeaderCellItem height="90%">  
                                                            <suite:content>  
                                                                   <suite:NumericContent size="S" scale="M" value="1.96" valueColor="Error" indicator="Up"/>  
                                                            </suite:content>  
                                                     </suite:HeaderCellItem>  
                                               </suite:north>  
                                               <suite:south>  
                                                     <suite:HeaderCellItem height="10%">  
                                                            <suite:content>  
                                                                   <m:Label text="EUR, Current Quarter" />  
                                                            </suite:content>  
                                                     </suite:HeaderCellItem>  
                                               </suite:south>  
                                        </suite:HeaderCell>  
                                        <suite:HeaderCell height="auto">  
                                               <suite:north>  
                                                     <suite:HeaderCellItem height="90%">  
                                                            <suite:content>  
                                                                   <suite:BulletChart size="S" scale="M" targetValue="75" targetValueLabel="75c" minValue="0" maxValue="150">  
                                                                          <suite:actual>  
                                                                                 <suite:BulletChartData value="125" color="Error"/>  
                                                                          </suite:actual>  
                                                                          <suite:thresholds>  
                                                                                  <suite:BulletChartData value="35" color="Critical"/>  
                                                                                 <suite:BulletChartData value="115" color="Error"/>  
                                                                          </suite:thresholds>  
                                                                   </suite:BulletChart>   
                                                            </suite:content>  
                                                     </suite:HeaderCellItem>  
                                               </suite:north>  
                                               <suite:south>  
                                                     <suite:HeaderCellItem height="10%">  
                                                            <suite:content>  
                                                                   <m:Label text="EUR, Current and Target" />  
                                                            </suite:content>  
                                                     </suite:HeaderCellItem>  
                                               </suite:south>  
                                        </suite:HeaderCell>  
                                        <suite:HeaderCell height="auto">  
                                               <suite:north>  
                                                     <suite:HeaderCellItem height="90%">  
                                                            <suite:content>  
                                                                   <suite:NumericContent size="S" value="3" icon="sap-icon://travel-expense" />  
                                                            </suite:content>  
                                                     </suite:HeaderCellItem>  
                                               </suite:north>  
                                               <suite:south>  
                                                     <suite:HeaderCellItem height="10%">  
                                                            <suite:content>  
                                                                   <m:Label text="Leave Requests" />  
                                                            </suite:content>  
                                                     </suite:HeaderCellItem>  
                                               </suite:south>  
                                        </suite:HeaderCell>  
                                        <suite:HeaderCell height="auto">  
                                               <suite:north>  
                                                     <suite:HeaderCellItem height="90%">  
                                                            <suite:content>  
                                                                   <suite:NumericContent size="S" value="9" icon="sap-icon://locked" />   
                                                            </suite:content>  
                                                     </suite:HeaderCellItem>  
                                               </suite:north>  
                                               <suite:south>  
                                                     <suite:HeaderCellItem height="10%">  
                                                            <suite:content>  
                                                                   <m:Label text="Hours since last Activity" />  
                                                            </suite:content>  
                                                     </suite:HeaderCellItem>  
                                               </suite:south>  
                                        </suite:HeaderCell>  
                                        <suite:HeaderCell height="auto">  
                                               <suite:north>  
                                                     <suite:HeaderCellItem height="90%">  
                                                            <suite:content>  
                                                                   <suite:NumericContent size="S" scale="M" value="1.25" valueColor="Good" indicator="Up"/>  
                                                            </suite:content>  
                                                     </suite:HeaderCellItem>  
                                               </suite:north>  
                                               <suite:south>  
                                                     <suite:HeaderCellItem height="10%">  
                                                            <suite:content>  
                                                                   <m:Label text="EUR, Current Quarter" />  
                                                            </suite:content>  
                                                     </suite:HeaderCellItem>  
                                               </suite:south>  
                                        </suite:HeaderCell>  
                                 </suite:items>
                           </suite:HeaderContainer>
        </headerContainer>
    </ObjectHeader>
</mvc:View>