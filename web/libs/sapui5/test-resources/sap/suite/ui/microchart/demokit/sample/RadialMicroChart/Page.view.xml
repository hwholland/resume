<mvc:View
	controllerName="sap.suite.ui.microchart.sample.RadialMicroChart.Page"
	xmlns="sap.suite.ui.microchart"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout.form"
	xmlns:m="sap.m">
	<l:SimpleForm maxContainerCols="4" editable="true">
		<l:content>
			<m:FlexBox width="100px" height="100px" alignItems="Center" justifyContent="SpaceBetween">
				<m:items>
					<RadialMicroChart percentage="45" press="press"></RadialMicroChart>
				</m:items>
			</m:FlexBox>
			<m:FlexBox width="100px" height="100px" alignItems="Center" justifyContent="SpaceBetween">
				<m:items>
					<RadialMicroChart percentage="99.9" valueColor="Good" press="press"></RadialMicroChart>
				</m:items>
			</m:FlexBox>
			<m:FlexBox width="100px" height="100px" alignItems="Center" justifyContent="SpaceBetween">
				<m:items>
					<RadialMicroChart percentage="0" valueColor="Error" press="press"></RadialMicroChart>
				</m:items>
			</m:FlexBox>
			<m:FlexBox width="100px" height="100px" alignItems="Center" justifyContent="SpaceBetween">
				<m:items>
					<RadialMicroChart percentage="0.1" valueColor="Critical" press="press"></RadialMicroChart>
				</m:items>
			</m:FlexBox>
		</l:content>
	</l:SimpleForm>
</mvc:View>